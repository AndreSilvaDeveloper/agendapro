        const CLIENT_NAME = "<%= client.name %>";
        const CLIENT_PHONE = "<%= client.phone %>";
        const ORG_NAME = "<%= typeof organization !== 'undefined' ? organization.name : 'AgendaPro' %>";
        
        let isProcessingGlobal = false;

        // =================================================
        // === LÓGICA DE TEMA ===
        // =================================================
        const THEMES = ["light", "medium-dark", "deep-dark"];
        const htmlEl = document.documentElement;

        function updateIcons(theme) {
            const isLight = theme === 'light';
            const sunD = document.getElementById('theme-icon-sun');
            const moonD = document.getElementById('theme-icon-moon');
            const sunM = document.getElementById('theme-icon-sun-mobile'); 
            const moonM = document.getElementById('theme-icon-moon-mobile'); 
            
            if(sunD) sunD.classList.toggle('hidden', !isLight);
            if(moonD) moonD.classList.toggle('hidden', isLight);
            if(sunM) sunM.classList.toggle('hidden', !isLight);
            if(moonM) moonM.classList.toggle('hidden', isLight);
        }

        function toggleTheme() {
            const currentTheme = htmlEl.getAttribute('data-theme') || 'light';
            const nextIndex = (THEMES.indexOf(currentTheme) + 1) % THEMES.length;
            const newTheme = THEMES[nextIndex];
            htmlEl.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateIcons(newTheme);
        }

        document.addEventListener('DOMContentLoaded', function() {
            updateIcons(localStorage.getItem('theme') || 'light');
            const btnD = document.getElementById('theme-toggle-btn');
            const btnM = document.getElementById('theme-toggle-btn-mobile'); 
            if (btnD) btnD.addEventListener('click', toggleTheme);
            if (btnM) btnM.addEventListener('click', toggleTheme);
        });

        // =================================================
        // === UTILITÁRIOS ===
        // =================================================
        const menuButton = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const closeMenu = document.getElementById('close-menu');
        if (menuButton && mobileMenu && closeMenu) {
            menuButton.addEventListener('click', () => mobileMenu.classList.remove('hidden'));
            closeMenu.addEventListener('click', () => mobileMenu.classList.add('hidden'));
        }

        function openModal(modalId) {
            const modal = document.getElementById(modalId);
            if(modal) modal.classList.remove('hidden');
        }
        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            if(modal) modal.classList.add('hidden');
        }
        function getTodayIso() {
            return new Date().toISOString().split('T')[0];
        }
        function scrollToElement(selector) {
            const element = document.querySelector(selector);
            if (element) element.scrollIntoView({behavior: 'smooth'});
