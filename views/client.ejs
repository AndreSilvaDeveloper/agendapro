        }

        // TODAS AS FUN√á√ïES ORIGINAIS MANTIDAS
        function addService() {
            const container = document.getElementById('services');
            if (!container) return;
            
            const serviceDiv = document.createElement('div');
            serviceDiv.className = 'bg-gray-50 p-4 rounded-lg border border-gray-200';
            serviceDiv.innerHTML = `
                <div class="flex gap-3">
                    <input type="text" placeholder="Nome do servi√ßo" 
                           class="flex-1 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-dark focus:border-transparent transition-all service-name">
                    <input type="number" placeholder="Pre√ßo" step="0.01"
