            const title = form.closest('.p-4, .bg-white').querySelector('h4, h6').innerText;
            modal.querySelector('#payment-modal-title').innerText = `Pagar: ${title}`;

            const amountInput = modalForm.querySelector('input[name="amount"]');
            
