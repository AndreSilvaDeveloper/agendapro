<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title><%= client.name %> – Detalhes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .gradient-purple {
            background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
        }
        .gradient-blue {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        }
        .gradient-green {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }
        .status-paid {
            background-color: #dcfce7;
            color: #166534;
        }
        .status-pending {
            background-color: #fef3c7;
            color: #92400e;
        }
        .status-overdue {
            background-color: #fee2e2;
            color: #991b1b;
        }
        .history-badge {
            background-color: #e0e7ff;
            color: #3730a3;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50">
    <!-- HEADER -->
    <header class="glass-effect sticky top-0 z-50 border-b border-purple-100">
        <div class="max-w-7xl mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <button onclick="history.back()" class="flex items-center space-x-2 text-purple-600 hover:text-purple-700 transition-colors">
                        <i class="fas fa-arrow-left"></i>
                        <span class="hidden sm:inline">Voltar</span>
                    </button>
                    <div class="h-6 w-px bg-purple-200"></div>
                    <h1 class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                        Studio Kadosh
                    </h1>
                </div>
                
                <!-- Desktop Navigation -->
                <nav class="hidden lg:flex items-center space-x-6">
                    <a href="/agendamentos-por-dia" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-calendar-alt mr-2"></i>Agendamentos
                    </a>
                    <a href="/clients" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-users mr-2"></i>Clientes
                    </a>
                    <a href="/financeiro" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-dollar-sign mr-2"></i>Financeiro
                    </a>
                    <a href="/balanco" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-balance-scale mr-2"></i>Balanço Geral
                    </a>
                    <a href="/expenses" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-receipt mr-2"></i>Despesas
                    </a>
                    <a href="/logout" class="text-red-600 hover:text-red-700 transition-colors">
                        <i class="fas fa-sign-out-alt mr-2"></i>Sair
                    </a>
                </nav>

                <!-- Mobile Menu Button -->
                <button id="menu-button" class="lg:hidden p-2 rounded-lg hover:bg-purple-100 transition-colors">
                    <i class="fas fa-bars text-purple-600"></i>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden lg:hidden mt-4 space-y-2">
                <a href="/agendamentos-por-dia" class="flex items-center space-x-3 p-3 rounded-lg gradient-purple text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-calendar-alt"></i>
                    <span>📅 Agendamentos</span>
                </a>
                <a href="/clients" class="flex items-center space-x-3 p-3 rounded-lg gradient-blue text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-users"></i>
                    <span>👥 Clientes</span>
                </a>
                <a href="/financeiro" class="flex items-center space-x-3 p-3 rounded-lg gradient-green text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-dollar-sign"></i>
                    <span>💵 Financeiro</span>
                </a>
                <a href="/balanco" class="flex items-center space-x-3 p-3 rounded-lg bg-gradient-to-r from-yellow-500 to-orange-500 text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-balance-scale"></i>
                    <span>⚖️ Balanço Geral</span>
                </a>
                <a href="/expenses" class="flex items-center space-x-3 p-3 rounded-lg bg-gradient-to-r from-pink-500 to-rose-500 text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-receipt"></i>
                    <span>💸 Despesas</span>
                </a>
                <a href="/logout" class="flex items-center space-x-3 p-3 rounded-lg bg-gradient-to-r from-red-500 to-red-600 text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>⬅️ Sair</span>
                </a>
            </div>
        </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Client Header Card -->
        <div class="bg-white rounded-2xl shadow-xl p-6 mb-8 card-hover animate-fade-in">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-4 lg:space-y-0">
                <div class="flex items-center space-x-4">
                    <div class="w-16 h-16 gradient-purple rounded-full flex items-center justify-center">
                        <i class="fas fa-user text-white text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900"><%= client.name %></h1>
                        <div class="flex items-center text-gray-600 mt-1">
                            <i class="fas fa-phone mr-2"></i>
                            <span><%= client.phone %></span>
                        </div>
                        <% if (isHistory) { %>
                        <div class="mt-2">
                            <span class="status-badge history-badge">
                                <i class="fas fa-history mr-1"></i>
                                Visualizando Histórico
                            </span>
                        </div>
                        <% } %>
                    </div>
                </div>
                
                <div class="flex flex-wrap gap-2">
                    <% if (!isHistory) { %>
                    <form action="/client/<%= client._id %>/edit" method="POST" onsubmit="return editClient(this, '<%= client.name %>', '<%= client.phone %>')" class="inline">
                        <button class="flex items-center space-x-2 px-4 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors">
                            <i class="fas fa-edit"></i>
                            <span>✏️ Editar</span>
                        </button>
                    </form>
                    <a href="/client/<%= client._id %>/historico" class="flex items-center space-x-2 px-4 py-2 bg-yellow-100 text-yellow-700 rounded-lg hover:bg-yellow-200 transition-colors">
                        <i class="fas fa-history"></i>
                        <span>📜 Histórico</span>
                    </a>
                    <form action="/client/<%= client._id %>/delete" method="POST" onsubmit="return confirm('Tem certeza que deseja excluir este cliente?')" class="inline">
                        <button class="flex items-center space-x-2 px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors">
                            <i class="fas fa-trash"></i>
                            <span>🗑️ Excluir</span>
                        </button>
                    </form>
                    <% } else { %>
                    <button onclick="history.back()" class="flex items-center space-x-2 px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors">
                        <i class="fas fa-arrow-left"></i>
                        <span>🚪 Voltar</span>
                    </button>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
            <!-- Left Column -->
            <div class="xl:col-span-2 space-y-8">
                <% if (!isHistory) { %>
                <!-- Novo Agendamento -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="gradient-blue p-6">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-calendar-plus mr-3"></i>
                            Novo Agendamento
                        </h2>
                    </div>
                    <div class="p-6">
                        <form action="/appointment" method="POST" onsubmit="return processForm()" class="space-y-6">
                            <input type="hidden" name="clientId" value="<%= client._id %>">
                            
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Data</label>
                                    <input type="date" name="date" required class="w-full p-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Horário</label>
                                    <input type="time" name="time" required class="w-full p-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Duração (min)</label>
                                    <input type="number" name="duration" placeholder="120" required class="w-full p-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all">
                                </div>
                            </div>

                            <div>
                                <div class="flex items-center justify-between mb-4">
                                    <h3 class="text-lg font-semibold text-gray-900">Serviços</h3>
                                    <button type="button" onclick="addService()" class="flex items-center space-x-2 px-4 py-2 gradient-green text-white rounded-lg hover:opacity-90 transition-opacity">
                                        <i class="fas fa-plus"></i>
                                        <span>+ Adicionar Serviço</span>
                                    </button>
                                </div>
                                <div id="services" class="space-y-3"></div>
                            </div>

                            <input type="hidden" name="services" id="servicesInput">
                            <input type="hidden" name="products" id="productsInput">
                            
                            <button type="submit" class="w-full gradient-blue text-white py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity">
                                <i class="fas fa-calendar-check mr-2"></i>
                                Agendar
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Produtos -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="gradient-purple p-6">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-box mr-3"></i>
                            Produtos
                        </h2>
                    </div>
                    <div class="p-6">
                        <form action="/client/<%= client._id %>/add-product" method="POST" class="mb-6">
                            <div class="flex flex-col sm:flex-row gap-3">
                                <input name="name" type="text" placeholder="Nome do produto" required 
                                       class="flex-1 p-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all">
                                <input name="price" type="number" step="0.01" placeholder="Preço" required 
                                       class="sm:w-32 p-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all">
                                <button type="submit" class="gradient-purple text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity">
                                    <i class="fas fa-plus mr-2"></i>
                                    ➕ Adicionar
                                </button>
                            </div>
                        </form>

                        <% if (client.products && client.products.length) { %>
                        <div class="space-y-4">
                            <% client.products.forEach((p, i) => { %>
                            <% 
                                const totalPaid = (p.payments || []).reduce((sum, pay) => sum + pay.amount, 0);
                                const remaining = p.price - totalPaid;
                                const isPaid = remaining <= 0;
                            %>
                            <div class="bg-gradient-to-r from-gray-50 to-purple-50 p-4 rounded-xl border border-purple-100">
                                <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-3 lg:space-y-0">
                                    <div class="flex-1">
                                        <div class="flex items-center space-x-3 mb-2">
                                            <h4 class="font-semibold text-gray-900 text-lg"><%= p.name %></h4>
                                            <% if (isPaid) { %>
                                                <span class="status-badge status-paid">
                                                    <i class="fas fa-check-circle mr-1"></i>
                                                    Pago
                                                </span>
                                            <% } else { %>
                                                <span class="status-badge status-pending">
                                                    <i class="fas fa-clock mr-1"></i>
                                                    Pendente
                                                </span>
                                            <% } %>
                                        </div>
                                        <div class="flex flex-wrap gap-4 text-sm text-gray-600">
                                            <span><strong>Total:</strong> R$ <%= p.price.toFixed(2) %></span>
                                            <span><strong>Pago:</strong> R$ <%= totalPaid.toFixed(2) %></span>
                                            <% if (remaining > 0) { %>
                                                <span class="text-red-600 font-semibold">
                                                    <strong>Restante:</strong> R$ <%= remaining.toFixed(2) %>
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                    
                                    <div class="flex flex-wrap gap-2">
                                        <form action="/client/<%= client._id %>/product/<%= i %>/pay" method="POST" onsubmit="return pagarValor(this)" class="inline">
                                            <button class="flex items-center space-x-2 px-3 py-2 gradient-green text-white rounded-lg hover:opacity-90 transition-opacity">
                                                <i class="fas fa-credit-card"></i>
                                                <span>💰 Pagar</span>
                                            </button>
                                        </form>
                                        <form action="/client/<%= client._id %>/product/<%= i %>/edit" method="POST" onsubmit="return editItem(this, '<%= p.name %>', '<%= p.price %>')" class="inline">
                                            <button class="flex items-center space-x-2 px-3 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors">
                                                <i class="fas fa-edit"></i>
                                                <span>✏️ Editar</span>
                                            </button>
                                        </form>
                                        <form action="/client/<%= client._id %>/product/<%= i %>/delete" method="POST" onsubmit="return confirm('Excluir este produto?')" class="inline">
                                            <button class="flex items-center space-x-2 px-3 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors">
                                                <i class="fas fa-trash"></i>
                                                <span>🗑️ Excluir</span>
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                <!-- Pagamentos do Produto -->
                                <% if (p.payments && p.payments.length) { %>
                                <div class="mt-4 pt-4 border-t border-purple-200">
                                    <h5 class="text-sm font-semibold text-gray-700 mb-3 flex items-center">
                                        <i class="fas fa-history mr-2"></i>
                                        Histórico de Pagamentos
                                    </h5>
                                    <div class="space-y-2">
                                        <% p.payments.forEach((pay, j) => { %>
                                        <div class="flex items-center justify-between bg-white p-3 rounded-lg border">
                                            <div class="flex items-center space-x-3">
                                                <div class="w-8 h-8 gradient-green rounded-full flex items-center justify-center">
                                                    <i class="fas fa-check text-white text-xs"></i>
                                                </div>
                                                <div>
                                                    <div class="font-semibold text-gray-900">R$ <%= pay.amount.toFixed(2) %></div>
                                                    <div class="text-sm text-gray-600">
                                                        <%= new Date(pay.paidAt).toLocaleDateString('pt-BR') %> • <%= pay.method %>
                                                        <% if (pay.description) { %> • <%= pay.description %><% } %>
                                                    </div>
                                                </div>
                                            </div>
                                            <form action="/client/<%= client._id %>/product/<%= i %>/remove-payment/<%= j %>" method="POST" onsubmit="return confirm('Excluir este pagamento?')" class="inline">
                                                <button class="text-red-600 hover:text-red-700 p-2 rounded-lg hover:bg-red-50 transition-colors">
                                                    <i class="fas fa-trash text-sm"></i>
                                                </button>
                                            </form>
                                        </div>
                                        <% }) %>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                            <% }) %>
                        </div>
                        <% } else { %>
                        <div class="text-center py-8 text-gray-500">
                            <i class="fas fa-box-open text-4xl mb-4"></i>
                            <p>Nenhum produto cadastrado ainda.</p>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% } %>

                <!-- Produtos Pagos (para histórico) -->
                <% if (isHistory && paidProducts && paidProducts.length) { %>
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="bg-gradient-to-r from-green-500 to-emerald-600 p-6">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-check-circle mr-3"></i>
                            Produtos Pagos
                        </h2>
                    </div>
                    <div class="p-6">
                        <div class="space-y-4">
                            <% paidProducts.forEach(function(prod, prodIdx) { %>
                            <div class="bg-green-50 p-4 rounded-xl border border-green-200">
                                <div class="flex justify-between items-center mb-2">
                                    <strong class="text-green-800 text-lg"><%= prod.name %></strong>
                                    <span class="text-green-600 font-semibold text-xl">R$ <%= prod.price.toFixed(2) %></span>
                                </div>
                                <ul class="space-y-2 text-sm">
                                    <% prod.payments.forEach(function(pay, payIdx) { %>
                                    <li class="flex items-center justify-between text-green-700 bg-white p-2 rounded border">
                                        <div class="flex items-center">
                                            <i class="fas fa-check-circle mr-2 text-green-600"></i>
                                            <span>
   <%= pay.formattedDate %> – R$ <%= (pay.amount != null ? pay.amount.toFixed(2) : '0.00') %>
   (<%= pay.method %><% if (pay.description) { %>, <%= pay.description %><% } %>)
 </span>
                                        </div>
                                        <form action="/client/<%= client._id %>/product/<%= prodIdx %>/remove-payment/<%= payIdx %>" method="POST" onsubmit="return confirm('Excluir este pagamento?')" class="inline">
                                            <button class="text-red-600 hover:text-red-700 p-1 rounded hover:bg-red-50 transition-colors">
                                                <i class="fas fa-trash text-xs"></i>
                                            </button>
                                        </form>
                                    </li>
                                    <% }) %>
                                </ul>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Agendamentos -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="bg-gradient-to-r from-indigo-500 to-blue-600 p-6">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-calendar-alt mr-3"></i>
                            <% if (isHistory) { %>Histórico de Agendamentos<% } else { %>Agendamentos<% } %>
                        </h2>
                    </div>
                    <div class="p-6">
                        <%
                        // CORREÇÃO: Lógica de filtragem corrigida
                        let visible;
                        if (typeof isHistory !== 'undefined' && isHistory) {
                            // Se for histórico, mostra TODOS os agendamentos
                            visible = appointments || [];
                        } else {
                            // Se não for histórico, aplica a filtragem original
                            visible = (appointments || []).filter(a => {
                                // transforma "DD/MM/YYYY …" em Date
                                const [d, m, y] = a.formatted.split(' ')[0].split('/');
                                const apptDate = new Date(y + '-' + m + '-' + d + 'T00:00:00');
                                const todayMid = new Date();
                                todayMid.setHours(0,0,0,0);
                                // se for hoje ou no futuro
                                if (apptDate >= todayMid) return true;
                                // algum serviço ainda não foi pago integralmente?
                                for (let s of a.services || []) {
                                    const paid = (s.payments || []).reduce((sum,p)=> sum + p.amount, 0);
                                    if (paid < s.price) return true;
                                }
                                // algum produto ainda não foi pago integralmente?
                                for (let p of a.products || []) {
                                    const paid = (p.payments || []).reduce((sum,q)=> sum + q.amount, 0);
                                    if (paid < p.price) return true;
                                }
                                return false;
                            });
                        }
                        %>

                        <% if (visible.length === 0) { %>
                        <div class="text-center py-8 text-gray-500">
                            <i class="fas fa-calendar-times text-4xl mb-4"></i>
                            <p><% if (isHistory) { %>Nenhum agendamento encontrado no histórico.<% } else { %>Nenhum agendamento futuro ou pendente.<% } %></p>
                        </div>
                        <% } else { %>
                        <div class="space-y-4">
                            <% visible.forEach(function(a) { 
                                const [datePart, , timePart] = a.formatted.split(' ');
                                
                                // Determina se é um agendamento passado
                                const [d, m, y] = datePart.split('/');
                                const apptDate = new Date(y + '-' + m + '-' + d + 'T00:00:00');
                                const todayMid = new Date();
                                todayMid.setHours(0,0,0,0);
                                const isPast = apptDate < todayMid;
                            %>
                            <div class="bg-gradient-to-r from-gray-50 to-blue-50 p-4 rounded-xl border border-blue-100 <%= isPast ? 'opacity-75' : '' %>">
                                <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-3 lg:space-y-0 mb-4">
                                    <div>
                                        <h4 class="font-semibold text-gray-900 text-lg flex items-center">
                                            <i class="fas fa-clock mr-2 text-blue-600"></i>
                                            <%= a.formatted %> (<%= a.duration %> min)
                                            <% if (isPast) { %>
                                                <span class="ml-3 status-badge history-badge">
                                                    <i class="fas fa-history mr-1"></i>
                                                    Passado
                                                </span>
                                            <% } %>
                                        </h4>
                                    </div>
                                    
                                    <% if (!isHistory && !isPast) { %>
                                    <div class="flex flex-wrap gap-2">
                                        <form action="/appointment/<%= a._id %>/edit-datetime" method="POST" onsubmit='return editDateTime(this, "<%= datePart %>", "<%= timePart %>")' class="inline">
                                            <button class="flex items-center space-x-2 px-3 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors">
                                                <i class="fas fa-edit"></i>
                                                <span class="hidden sm:inline">📅✏️ Alterar Data/Hora</span>
                                            </button>
                                        </form>
                                        <form action="/appointment/<%= a._id %>/cancel" method="POST" onsubmit="return confirm('Deseja cancelar este agendamento?')" class="inline">
                                            <button class="flex items-center space-x-2 px-3 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors">
                                                <i class="fas fa-times"></i>
                                                <span class="hidden sm:inline">Cancelar</span>
                                            </button>
                                        </form>
                                    </div>
                                    <% } %>
                                </div>

                                <!-- Serviços do Agendamento -->
                                <% if (a.services && a.services.length) { %>
                                <div class="border-t border-blue-200 pt-4">
                                    <h5 class="font-semibold text-gray-700 mb-3 flex items-center">
                                        <i class="fas fa-concierge-bell mr-2"></i>
                                        Serviços:
                                    </h5>
                                    <div class="space-y-3">
                                        <% a.services.forEach(function(service, svcIdx) { 
                                            const servicePaid = (service.payments || []).reduce((sum, p) => sum + p.amount, 0);
                                            const serviceRemaining = service.price - servicePaid;
                                            const isServicePaid = serviceRemaining <= 0;
                                        %>
                                        <div class="bg-white p-4 rounded-lg border">
                                            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-2 lg:space-y-0">
                                                <div class="flex-1">
                                                    <div class="flex items-center space-x-3 mb-2">
                                                        <h6 class="font-semibold text-gray-900"><%= service.name %></h6>
                                                        <% if (isServicePaid) { %>
                                                            <span class="status-badge status-paid">
                                                                <i class="fas fa-check-circle mr-1"></i>
                                                                Pago
                                                            </span>
                                                        <% } else { %>
                                                            <span class="status-badge status-pending">
                                                                <i class="fas fa-clock mr-1"></i>
                                                                Pendente
                                                            </span>
                                                        <% } %>
                                                    </div>
                                                    <div class="text-sm text-gray-600">
                                                        <span><strong>Valor:</strong> R$ <%= service.price.toFixed(2) %></span>
                                                        <% if (servicePaid > 0) { %>
                                                            <span class="ml-4"><strong>Pago:</strong> R$ <%= servicePaid.toFixed(2) %></span>
                                                        <% } %>
                                                        <% if (serviceRemaining > 0) { %>
                                                            <span class="ml-4 text-red-600 font-semibold">
                                                                <strong>Restante:</strong> R$ <%= serviceRemaining.toFixed(2) %>
                                                            </span>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                
                                                
                                                <div class="flex flex-wrap gap-2">
                                                    <form action="/appointment/<%= a._id %>/pay-service/<%= svcIdx %>" method="POST" onsubmit="return pagarValor(this)" class="inline">
                                                        <button class="flex items-center space-x-2 px-3 py-2 gradient-green text-white rounded-lg hover:opacity-90 transition-opacity">
                                                            <i class="fas fa-credit-card"></i>
                                                            <span>💰 Pagar</span>
                                                        </button>
                                                    </form>
                                                    <% if (!isHistory) { %>
                                                    <form action="/appointment/<%= a._id %>/edit-service/<%= svcIdx %>" method="POST" onsubmit="return editItem(this, '<%= service.name %>', '<%= service.price %>')" class="inline">
                                                        <button class="flex items-center space-x-2 px-3 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors">
                                                            <i class="fas fa-edit"></i>
                                                            <span>✏️ Editar</span>
                                                        </button>
                                                    </form>
                                                    <form action="/appointment/<%= a._id %>/remove-service/<%= svcIdx %>" method="POST" onsubmit="return confirm('Excluir serviço?')" class="inline">
                                                        <button class="flex items-center space-x-2 px-3 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors">
                                                            <i class="fas fa-trash"></i>
                                                            <span>🗑️ Excluir</span>
                                                        </button>
                                                    </form>
                                                    <% } %>
                                                </div>
                                            </div>

                                            <!-- Pagamentos do Serviço -->
                                            <% if (service.payments && service.payments.length) { %>
                                            <div class="mt-3 pt-3 border-t border-gray-200">
                                                <div class="space-y-2">
                                                    <% service.payments.forEach(function(payment, payIdx) { %>
                                                    <div class="flex items-center justify-between text-sm bg-gray-50 p-2 rounded">
                                                        <div class="flex items-center space-x-2">
                                                            <i class="fas fa-check-circle text-green-600"></i>
                                                            <span>
                                                                <%= new Date(payment.paidAt).toLocaleDateString('pt-BR') %> – 
                                                                R$ <%= payment.amount.toFixed(2) %> (<%= payment.method %>
                                                                <% if (payment.description) { %>, <%= payment.description %><% } %>)
                                                            </span>
                                                        </div>
                                                        <form action="/appointment/<%= a._id %>/remove-payment/service/<%= svcIdx %>/<%= payIdx %>" method="POST" onsubmit="return confirm('Excluir este pagamento?')" class="inline">
                                                            <button class="text-red-600 hover:text-red-700 p-1 rounded hover:bg-red-50 transition-colors">
                                                                <i class="fas fa-trash text-xs"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                    <% }); %>
                                                </div>
                                            </div>
                                            <% } %>
                                        </div>
                                        <% }); %>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                            <% }); %>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Right Column - Summary -->
            <div class="space-y-6">
                <!-- Financial Summary -->
                <% if (!isHistory) { %>
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="gradient-bg p-6">
                        <h3 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-chart-line mr-3"></i>
                            Resumo Financeiro
                        </h3>
                    </div>
                    <div class="p-6 space-y-4">
                        <div class="bg-gradient-to-r from-green-50 to-emerald-50 p-4 rounded-xl border border-green-200">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 gradient-green rounded-full flex items-center justify-center">
                                        <i class="fas fa-concierge-bell text-white"></i>
                                    </div>
                                    <span class="font-medium text-green-800">Total por Serviços</span>
                                </div>
                                <span class="text-xl font-bold text-green-600">R$ <%= totalService.toFixed(2) %></span>
                            </div>
                        </div>

                        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-4 rounded-xl border border-blue-200">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 gradient-blue rounded-full flex items-center justify-center">
                                        <i class="fas fa-check-circle text-white"></i>
                                    </div>
                                    <span class="font-medium text-blue-800">Total Pago em Serviços</span>
                                </div>
                                <span class="text-xl font-bold text-blue-600">R$ <%= totalPaidService.toFixed(2) %></span>
                            </div>
                        </div>

                        <div class="bg-gradient-to-r from-purple-50 to-pink-50 p-4 rounded-xl border border-purple-200">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 gradient-purple rounded-full flex items-center justify-center">
                                        <i class="fas fa-box text-white"></i>
                                    </div>
                                    <span class="font-medium text-purple-800">Total por Produtos</span>
                                </div>
                                <span class="text-xl font-bold text-purple-600">R$ <%= totalProduct.toFixed(2) %></span>
                            </div>
                        </div>

                        <div class="bg-gradient-to-r from-indigo-50 to-blue-50 p-4 rounded-xl border border-indigo-200">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-gradient-to-r from-indigo-500 to-blue-600 rounded-full flex items-center justify-center">
                                        <i class="fas fa-check-circle text-white"></i>
                                    </div>
                                    <span class="font-medium text-indigo-800">Total Pago em Produtos</span>
                                </div>
                                <span class="text-xl font-bold text-indigo-600">R$ <%= totalPaidProduct.toFixed(2) %></span>
                            </div>
                        </div>

                        <div class="bg-gradient-to-r from-red-50 to-pink-50 p-4 rounded-xl border-2 border-red-200">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-gradient-to-r from-red-500 to-pink-500 rounded-full flex items-center justify-center">
                                        <i class="fas fa-exclamation-triangle text-white"></i>
                                    </div>
                                    <span class="font-bold text-red-800">Total Restante</span>
                                </div>
                                <span class="text-2xl font-bold text-red-600">
                                    R$ <%= (totalService + totalProduct - (totalPaidService + totalPaidProduct)).toFixed(2) %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Quick Actions -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="bg-gradient-to-r from-gray-700 to-gray-800 p-6">
                        <h3 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-bolt mr-3"></i>
                            <% if (isHistory) { %>Navegação<% } else { %>Ações Rápidas<% } %>
                        </h3>
                    </div>
                    <div class="p-6 space-y-3">
                        <% if (!isHistory) { %>
                        <button onclick="scrollToElement('form[action=\'/appointment\']')" 
                                class="w-full gradient-purple text-white py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity">
                            <i class="fas fa-calendar-plus mr-2"></i>
                            Novo Agendamento
                        </button>
                        <button onclick="scrollToElement('form[action*=\'/add-product\']')" 
                                class="w-full bg-purple-100 text-purple-700 py-3 rounded-lg font-semibold hover:bg-purple-200 transition-colors">
                            <i class="fas fa-plus mr-2"></i>
                            Adicionar Produto
                        </button>
                        <a href="/client/<%= client._id %>/historico" 
                           class="block w-full bg-blue-100 text-blue-700 py-3 rounded-lg font-semibold hover:bg-blue-200 transition-colors text-center">
                            <i class="fas fa-history mr-2"></i>
                            Ver Histórico Completo
                        </a>
                        <% } else { %>
                        <a href="/client/<%= client._id %>" 
                           class="block w-full gradient-blue text-white py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity text-center">
                            <i class="fas fa-arrow-left mr-2"></i>
                            Voltar aos Detalhes
                        </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-8 text-center">
            <button onclick="history.back()" class="gradient-bg text-white px-8 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity">
                <i class="fas fa-arrow-left mr-2"></i>
                🚪 Voltar
            </button>
        </div>
    </div>

    <script>
        // Mobile menu toggle - com verificação de segurança
        const menuButton = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (menuButton && mobileMenu) {
            menuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }

        // Função para scroll seguro
        function scrollToElement(selector) {
            const element = document.querySelector(selector);
            if (element) {
                element.scrollIntoView({behavior: 'smooth'});
            }
        }

        // TODAS AS FUNÇÕES ORIGINAIS MANTIDAS
        function addService() {
            const container = document.getElementById('services');
            if (!container) return;
            
            const serviceDiv = document.createElement('div');
            serviceDiv.className = 'bg-gray-50 p-4 rounded-lg border border-gray-200';
            serviceDiv.innerHTML = `
                <div class="flex gap-3">
                    <input type="text" placeholder="Nome do serviço" 
                           class="flex-1 p-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all service-name">
                    <input type="number" placeholder="Preço" step="0.01"
                           class="w-32 p-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all service-price">
                    <button type="button" onclick="this.parentElement.parentElement.remove()" 
                            class="px-3 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            `;
            container.appendChild(serviceDiv);
        }

        function processForm() {
            const services = [], products = [];
            
            document.querySelectorAll('.service-name').forEach((el, i) => {
                const name = el.value.trim();
                const priceElement = document.querySelectorAll('.service-price')[i];
                const price = priceElement ? parseFloat(priceElement.value) : 0;
                if (name && !isNaN(price)) {
                    services.push({name: name, price: price});
                }
            });
            
            document.querySelectorAll('.product-name').forEach((el, i) => {
                const name = el.value.trim();
                const priceElement = document.querySelectorAll('.product-price')[i];
                const price = priceElement ? parseFloat(priceElement.value) : 0;
                if (name && !isNaN(price)) {
                    products.push({name: name, price: price});
                }
            });
            
            const servicesInput = document.getElementById('servicesInput');
            const productsInput = document.getElementById('productsInput');
            
            if (servicesInput) servicesInput.value = JSON.stringify(services);
            if (productsInput) productsInput.value = JSON.stringify(products);
            
            return true;
        }

        function pagarValor(form) {
            // valor
            const valor = prompt('Informe o valor pago:');
            const num = parseFloat(valor);
            if (!valor || isNaN(num) || num <= 0) { 
                alert('Valor inválido.'); 
                return false; 
            }

            // método
            let metodo = prompt('Forma de pagamento (Pix / Dinheiro / Cartão):');
            if (!metodo) return false;
            metodo = metodo.trim().toLowerCase();
            let key;
            if (metodo === 'pix') key = 'Pix';
            else if (metodo === 'dinheiro') key = 'Dinheiro';
            else if (metodo === 'cartão' || metodo === 'cartao') key = 'Cartão';
            else { 
                alert('Forma inválida. Use Pix, Dinheiro ou Cartão.'); 
                return false; 
            }

            // descrição
            const desc = prompt('Descrição (opcional):');

            // nova: data do pagamento (DD/MM/YYYY)
            const today = new Date();
            const pad = n => n.toString().padStart(2,'0');
            const defaultDate = `${pad(today.getDate())}/${pad(today.getMonth()+1)}/${today.getFullYear()}`;
            const dateStr = prompt('Data do pagamento (DD/MM/YYYY):', defaultDate);
            if (!dateStr) return false;
            if (!/^(\d{2})\/(\d{2})\/(\d{4})$/.test(dateStr)) {
                alert('Data inválida. Use DD/MM/YYYY.');
                return false;
            }

            // converte pra ISO para o backend interpretar
            const [, dd, mm, yyyy] = dateStr.match(/^(\d{2})\/(\d{2})\/(\d{4})$/);
            const isoDate = `${yyyy}-${mm}-${dd}T00:00:00Z`;

            // remove inputs antigos, se houver
            form.querySelectorAll('input[name="amount"], input[name="method"], input[name="description"], input[name="paidAt"]')
                .forEach(i => i.remove());

            // amount
            const ia = document.createElement('input');
            ia.type = 'hidden'; ia.name = 'amount'; ia.value = num;
            form.appendChild(ia);

            // method
            const im = document.createElement('input');
            im.type = 'hidden'; im.name = 'method'; im.value = key;
            form.appendChild(im);

            // description
            if (desc) {
                const id = document.createElement('input');
                id.type = 'hidden'; id.name = 'description'; id.value = desc;
                form.appendChild(id);
            }

            // paidAt (ISO)
            const ip = document.createElement('input');
            ip.type = 'hidden'; ip.name = 'paidAt'; ip.value = isoDate;
            form.appendChild(ip);

            return true;
        }

        function editItem(form, oldName, oldPrice) {
            const nome = prompt('Novo nome:', oldName);
            if (nome === null) return false;
            const preco = prompt('Novo preço:', oldPrice);
            if (preco === null) return false;

            const i1 = document.createElement('input');
            i1.type = 'hidden'; i1.name = 'name'; i1.value = nome;
            form.appendChild(i1);

            const i2 = document.createElement('input');
            i2.type = 'hidden'; i2.name = 'price'; i2.value = preco;
            form.appendChild(i2);

            return true;
        }

        function editClient(form, oldName, oldPhone) {
            const nome = prompt('Novo nome do cliente:', oldName);
            if (nome === null) return false;
            const telefone = prompt('Novo telefone:', oldPhone);
            if (telefone === null) return false;

            const i1 = document.createElement('input');
            i1.type = 'hidden'; i1.name = 'name'; i1.value = nome;
            form.appendChild(i1);

            const i2 = document.createElement('input');
            i2.type = 'hidden'; i2.name = 'phone'; i2.value = telefone;
            form.appendChild(i2);

            return true;
        }

        function editDateTime(form, oldDate, oldTime) {
            // oldDate vem como "DD/MM/YYYY"
            const [day, month, year] = oldDate.split('/');
            const formattedOld = `${day}/${month}/${year}`;
            
            const userDate = prompt('Nova data (DD/MM/YYYY):', formattedOld);
            if (userDate === null) return false;

            // validação simples de máscara
            const dateMatch = userDate.match(/^(\d{2})\/(\d{2})\/(\d{4})$/);
            if (!dateMatch) {
                alert('Data inválida. Use DD/MM/YYYY.');
                return false;
            }
            const [, d, m, y] = dateMatch;
            const isoDate = `${y}-${m}-${d}`;

            const userTime = prompt('Novo horário (HH:MM):', oldTime);
            if (userTime === null) return false;
            if (!/^\d{2}:\d{2}$/.test(userTime)) {
                alert('Horário inválido. Use HH:MM.');
                return false;
            }

            // campos hidden só com ISO + HH:MM
            const i1 = document.createElement('input');
            i1.type = 'hidden'; i1.name = 'date'; i1.value = isoDate;
            form.appendChild(i1);

            const i2 = document.createElement('input');
            i2.type = 'hidden'; i2.name = 'time'; i2.value = userTime;
            form.appendChild(i2);

            return true;
        }

        // Inicialização quando DOM estiver carregado
        document.addEventListener('DOMContentLoaded', function() {
            // Adiciona efeito de fade-in aos elementos quando aparecem na tela
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            });

            // Aplica animação apenas se os elementos existirem
            document.querySelectorAll('.animate-fade-in').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
        });
    </script>
</body>
</html>