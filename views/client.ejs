            // valida√ß√£o simples de m√°scara
            const dateMatch = userDate.match(/^(\d{2})\/(\d{2})\/(\d{4})$/);
            if (!dateMatch) {
                alert('Data inv√°lida. Use DD/MM/YYYY.');
                return false;
            }
            const [, d, m, y] = dateMatch;
            const isoDate = `${y}-${m}-${d}`;

            const userTime = prompt('Novo hor√°rio (HH:MM):', oldTime);
            if (userTime === null) return false;
            if (!/^\d{2}:\d{2}$/.test(userTime)) {
                alert('Hor√°rio inv√°lido. Use HH:MM.');
                return false;
