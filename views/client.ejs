        function processForm() {
            const services = [], products = [];
            
            document.querySelectorAll('.service-name').forEach((el, i) => {
                const name = el.value.trim();
                const priceElement = document.querySelectorAll('.service-price')[i];
                const price = priceElement ? parseFloat(priceElement.value) : 0;
                if (name && !isNaN(price)) {
                    services.push({name: name, price: price});
                }
            });
            
            document.querySelectorAll('.product-name').forEach((el, i) => {
                const name = el.value.trim();
                const priceElement = document.querySelectorAll('.product-price')[i];
                const price = priceElement ? parseFloat(priceElement.value) : 0;
                if (name && !isNaN(price)) {
                    products.push({name: name, price: price});
                }
            });
            
            const servicesInput = document.getElementById('servicesInput');
            const productsInput = document.getElementById('productsInput');
            
            if (servicesInput) servicesInput.value = JSON.stringify(services);
            if (productsInput) productsInput.value = JSON.stringify(products);
            
            return true;
        }


        
        function sendWhatsAppReminder(button, clientName, clientPhone, apptDateTime) {
            // 1. Encontra o "card" do agendamento onde o bot√£o foi clicado
            const card = button.closest('.p-4.rounded-xl');
            
            // 2. Procura todos os nomes de servi√ßo dentro daquele card
            const services = Array.from(card.querySelectorAll('h6.font-semibold'))
                                  .map(h6 => h6.innerText.trim())
                                  .join(', ');

            // 3. Limpa o telefone para conter apenas n√∫meros
            const phone = clientPhone.replace(/\D/g, '');
            // Garante o c√≥digo do Brasil (55)
            const fullPhone = phone.startsWith('55') ? phone : '55' + phone;

            // 4. Monta a mensagem (com quebras de linha \n)
            let message = `Ol√°, ${clientName}! ‚ú®\n\n`;
            message += `Gostar√≠amos de lembrar do seu hor√°rio no Studio Kadosh, ${apptDateTime}.\n\n`;
            
            if (services) {
                message += `Servi√ßos: *${services}*.\n\n`; // *texto* vira negrito no WA
            }
            
            message += `Por favor, nos avise se precisar remarcar. Estamos te esperando! üòä`;

            // 5. Codifica a mensagem para uma URL
            const encodedMessage = encodeURIComponent(message);
            
            // 6. Cria o link final do WhatsApp
            const waLink = `https://wa.me/${fullPhone}?text=${encodedMessage}`;

            // 7. Abre o link em uma nova aba
            window.open(waLink, '_blank');
        }

        // Fun√ß√£o NOVA E CORRIGIDA
        function pagarValor(form) { // 1. Remove o segundo argumento
            const modal = document.getElementById('payment-modal');
