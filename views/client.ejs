        // Fun√ß√µes gen√©ricas para controlar qualquer modal
            function openModal(modalId) {
                const modal = document.getElementById(modalId);
                if(modal) modal.classList.remove('hidden');
            }
            function closeModal(modalId) {
                const modal = document.getElementById(modalId);
                if(modal) modal.classList.add('hidden');
            }

            // Converte data "YYYY-MM-DD" para "DD/MM/YYYY"
            function ymdToDmy(isoDate) {
                if (!isoDate) return '';
                const [y, m, d] = isoDate.split('-');
                return `${d}/${m}/${y}`;
            }

            // Converte data "DD/MM/YYYY" para "YYYY-MM-DD"
            function dmyToYmd(dmyDate) {
                if (!dmyDate) return '';
                const [d, m, y] = dmyDate.split('/');
                return `${y}-${m}-${d}`;
            }

            // Formata data de hoje como YYYY-MM-DD
            function getTodayIso() {
                return new Date().toISOString().split('T')[0];
}

        // Fun√ß√£o para scroll seguro
        function scrollToElement(selector) {
            const element = document.querySelector(selector);
            if (element) {
                element.scrollIntoView({behavior: 'smooth'});
