        // --- NOVA FUNÇÃO DE ENVIO AUTOMÁTICO WHATSAPP ---
        async function sendAutomaticReminder(button, clientName, clientPhone, apptDateTime) {
            const originalContent = button.innerHTML;
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Enviando...';

            // Pega os serviços
            const card = button.closest('.p-4.rounded-xl');
            let servicesText = '';
            if(card) {
                 const services = Array.from(card.querySelectorAll('h6.font-semibold'))
                                  .map(h6 => h6.innerText.trim())
                                  .join(', ');
                 servicesText = services;
            }

            // 👇 AQUI ESTÁ A MUDANÇA: Usamos a variável do EJS dentro da string JS
            const orgName = "<%= typeof organization !== 'undefined' ? organization.name : 'AgendaPro' %>"; 

            let message = `Olá, ${clientName}! ✨\n\n`;
            message += `Gostaríamos de lembrar do seu horário no *${orgName}*: ${apptDateTime}.\n\n`;
            
            if (servicesText) {
                message += `Serviços: *${servicesText}*.\n\n`;
            }
            message += `Por favor, nos avise se precisar remarcar. Estamos te esperando! 😊`;

            try {
                const response = await fetch('/api/send-reminder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        phone: clientPhone,
                        message: message
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    button.className = "flex items-center space-x-2 px-4 py-2 bg-green-600 text-white rounded-lg transition-colors";
                    button.innerHTML = '<i class="fas fa-check"></i> Enviado';
                } else {
                    alert('Erro: ' + (data.error || 'Falha ao enviar'));
                    button.disabled = false;
                    button.innerHTML = originalContent;
                }
            } catch (error) {
                console.error(error);
                alert('Erro de conexão.');
                button.disabled = false;
                button.innerHTML = originalContent;
            }
        }
