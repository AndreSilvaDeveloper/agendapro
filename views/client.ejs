        // =================================================
        // === SISTEMA DE ENVIO UNIFICADO ===
        // =================================================

        async function sendWhatsAppMessage(message) {
            try {
                await fetch('/api/send-reminder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ phone: CLIENT_PHONE, message: message })
                });
            } catch (error) {
                console.error("Erro zap:", error);
            }
        }

        async function handleUnifiedAction(form, actionType, customData = {}) {
            if (isProcessingGlobal) return false;
            isProcessingGlobal = true;

            const submitBtn = form.querySelector('button');
            let originalText = '';
            if(submitBtn) {
                originalText = submitBtn.innerHTML;
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> ...';
                submitBtn.classList.add('opacity-50', 'cursor-not-allowed');
            }

            Swal.fire({
                title: 'Processando...',
                allowOutsideClick: false,
                didOpen: () => { Swal.showLoading(); }
            });

            try {
                const formData = new URLSearchParams(new FormData(form));
                for (const key in customData) {
                    formData.append(key, customData[key]);
                }

                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) throw new Error('Erro servidor');

                // CORREÇÃO DA MENSAGEM DE CONFIRMAÇÃO
                let whatsappMsg = "";
                if (actionType === 'confirm') {
                    // Mensagem de confirmação atualizada
                    whatsappMsg = `Olá *${CLIENT_NAME}*! ✅\nSeu agendamento no *${ORG_NAME}* foi confirmado.\n📅 ${customData.dateTimeStr}\n💇 Serviço: *${customData.serviceName}*\nEstamos te esperando!`;
                } 
                else if (actionType === 'cancel') {
                    whatsappMsg = `Olá *${CLIENT_NAME}*. \n❌Informamos que seu agendamento:\n💇 Serviço: *${customData.serviceName}*\n📅 ${customData.dateTimeStr}\nno *${ORG_NAME}* foi cancelado.\nMotivo: ${customData.cancellationReason || 'Não informado'}.`;
                }
                else if (actionType === 'edit_time') {
                    const [y, m, d] = customData.date.split('-');
                    whatsappMsg = `Olá *${CLIENT_NAME}*! 🗓️\nSeu agendamento foi reagendado para *${d}/${m}/${y}* às *${customData.time}*.`;
                }
                else if (actionType === 'payment') {
                    whatsappMsg = `Olá *${CLIENT_NAME}*! 💲\nRecebemos seu pagamento de *R$ ${customData.amount}* referente a *${customData.itemName}*. Obrigado!`;
                }

                if (whatsappMsg) await sendWhatsAppMessage(whatsappMsg);

                await Swal.fire({
                    icon: 'success',
                    title: 'Sucesso!',
                    timer: 1500,
                    showConfirmButton: false
                });

                window.location.reload();

            } catch (error) {
                console.error(error);
                isProcessingGlobal = false;
                if(submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                    submitBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                }
                Swal.fire('Erro', 'Houve um problema ao processar.', 'error');
            }
        }

        // =================================================
        // === INTERCEPTADORES ===
        // =================================================

        function confirmAppointment(form, serviceName, dateTimeStr) {
            handleUnifiedAction(form, 'confirm', { serviceName, dateTimeStr });
            return false;
        }

        function cancelAppointment(form, serviceName, dateTimeStr) {
            if (isProcessingGlobal) return false;
            
            Swal.fire({
                title: 'Cancelar?',
                text: 'Motivo (enviado ao cliente):',
                input: 'text',
                inputPlaceholder: 'Ex: Imprevisto...',
                showCancelButton: true,
                confirmButtonText: 'Sim, Cancelar',
                cancelButtonText: 'Voltar',
                confirmButtonColor: '#d33'
            }).then((result) => {
                if (result.isConfirmed) {
                    const reason = result.value || 'Cancelado pelo estabelecimento';
                    handleUnifiedAction(form, 'cancel', { cancellationReason: reason, serviceName, dateTimeStr });
                }
            });
            return false;
        }

        function editDateTimeNew(form, oldDateStr, oldTimeStr) {
            if (isProcessingGlobal) return false;

            const [d, m, y] = oldDateStr.split('/');
            const isoDate = `${y}-${m}-${d}`;

            Swal.fire({
                title: 'Alterar Data/Hora',
                html: `
                    <label class="block text-left text-sm font-bold mb-1">Nova Data:</label>
                    <input type="date" id="swal-date" class="swal2-input m-0 w-full mb-3" value="${isoDate}">
                    <label class="block text-left text-sm font-bold mb-1">Novo Horário:</label>
                    <input type="time" id="swal-time" class="swal2-input m-0 w-full" value="${oldTimeStr}">
                `,
                showCancelButton: true,
                confirmButtonText: 'Salvar',
                cancelButtonText: 'Cancelar',
                preConfirm: () => {
                    const date = document.getElementById('swal-date').value;
                    const time = document.getElementById('swal-time').value;
                    if (!date || !time) Swal.showValidationMessage('Preencha tudo');
                    return { date, time };
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    handleUnifiedAction(form, 'edit_time', { date: result.value.date, time: result.value.time });
                }
            });
            return false;
        }

        let currentPaymentForm = null;
        let currentItemName = '';

        function pagarValor(form) { 
            currentPaymentForm = form;
            const card = form.closest('.bg-white.p-4');
            const titleEl = card.querySelector('h4, h6');
            currentItemName = titleEl ? titleEl.innerText : 'Item';
            
            const remaining = parseFloat(form.dataset.remaining);
            const modalForm = document.getElementById('payment-modal-form');
            
            document.getElementById('payment-modal-title').innerText = `Pagar: ${currentItemName}`;
            modalForm.querySelector('input[name="amount"]').value = remaining ? remaining.toFixed(2) : '';
            modalForm.querySelector('input[name="paidAt"]').value = getTodayIso();
            
            openModal('payment-modal');
            return false; 
        }

        document.getElementById('payment-modal-form').onsubmit = function(e) {
            e.preventDefault();
            if(!currentPaymentForm || isProcessingGlobal) return;
            
            this.action = currentPaymentForm.action;
            const amountVal = this.querySelector('input[name="amount"]').value;
            closeModal('payment-modal');

            handleUnifiedAction(this, 'payment', { amount: amountVal, itemName: currentItemName });
        };

        // --- CORREÇÃO DA FUNÇÃO DE ENVIO MANUAL (COM NOME DO SERVIÇO) ---
        async function sendAutomaticReminder(button, clientName, clientPhone, apptDateTime, serviceName) {
            if(isProcessingGlobal) return;
            isProcessingGlobal = true;

            const originalContent = button.innerHTML;
            button.disabled = true; 
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ...';
            
            // Mensagem atualizada conforme solicitado
            const message = `Olá, *${clientName}*! ✨\nLembrete de agendamento no *${ORG_NAME}*: ${apptDateTime}.\nServiço: *${serviceName}*.\nEsperamos você! 😊`;

            try {
                const res = await fetch('/api/send-reminder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ phone: clientPhone, message })
                });
                if (res.ok) {
                    button.className = "flex items-center space-x-2 px-4 py-2 bg-green-600 text-white rounded-lg transition-colors";
                    button.innerHTML = '<i class="fas fa-check"></i> Enviado';
                } else {
                    button.disabled = false; button.innerHTML = originalContent;
                    Swal.fire('Erro', 'Falha ao enviar', 'error');
                }
            } catch (e) {
                button.disabled = false; button.innerHTML = originalContent;
            } finally {
                isProcessingGlobal = false;
            }
        }

        function addService() {
            const container = document.getElementById('services');
            if (!container) return;
            const div = document.createElement('div');
            div.className = 'bg-gray-50 p-4 rounded-lg border border-gray-200';
            div.innerHTML = `<div class="flex gap-3"><input type="text" placeholder="Nome" class="flex-1 p-3 border border-gray-300 rounded-lg service-name"><input type="number" placeholder="Preço" step="0.01" class="w-32 p-3 border border-gray-300 rounded-lg service-price"><button type="button" onclick="this.parentElement.parentElement.remove()" class="px-3 py-2 bg-red-100 text-red-700 rounded-lg"><i class="fas fa-trash"></i></button></div>`;
            container.appendChild(div);
        }

        function processForm() {
            const services = [];
            document.querySelectorAll('.service-name').forEach((el, i) => {
                const name = el.value.trim();
                const price = parseFloat(document.querySelectorAll('.service-price')[i].value);
                if (name && !isNaN(price)) services.push({name, price});
            });
            document.getElementById('servicesInput').value = JSON.stringify(services);
            document.getElementById('productsInput').value = JSON.stringify([]);
            return true;
        }

        function editItem(form, oldName, oldPrice) {
            const nome = prompt('Novo nome:', oldName);
            if (nome === null) return false;
            const preco = prompt('Novo preço:', oldPrice);
            if (preco === null) return false;
            
            const i1 = document.createElement('input'); i1.type = 'hidden'; i1.name = 'name'; i1.value = nome; form.appendChild(i1);
            const i2 = document.createElement('input'); i2.type = 'hidden'; i2.name = 'price'; i2.value = preco; form.appendChild(i2);
            return true;
        }
        
        function editClient(form, oldName, oldPhone) {
            const nome = prompt('Nome:', oldName); if(!nome) return false;
            const fone = prompt('Telefone:', oldPhone); if(!fone) return false;
            const i1 = document.createElement('input'); i1.type = 'hidden'; i1.name = 'name'; i1.value = nome; form.appendChild(i1);
            const i2 = document.createElement('input'); i2.type = 'hidden'; i2.name = 'phone'; i2.value = fone; form.appendChild(i2);
            return true;
        }

        document.addEventListener('DOMContentLoaded', function() {
            const sel = document.getElementById('staffIdSelect');
            if (sel && sel.options.length <= 1) {
                fetch('/api/admin/equipe').then(r=>r.json()).then(lst => {
                    lst.forEach(m => {
                        const o = document.createElement('option'); o.value = m.id; o.textContent = m.name; sel.appendChild(o);
                    });
                }).catch(e=>{});
            }
        });
    </script>
