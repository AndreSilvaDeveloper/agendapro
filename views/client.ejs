                                            <i class="fas fa-check-circle mr-2 text-green-600"></i>
                                            <span>
   <%= pay.formattedDate %> ‚Äì R$ <%= (pay.amount != null ? pay.amount.toFixed(2) : '0.00') %>
   (<%= pay.method %><% if (pay.description) { %>, <%= pay.description %><% } %>)
 </span>
                                        </div>
                                        <form action="/client/<%= client._id %>/product/<%= prodIdx %>/remove-payment/<%= payIdx %>" method="POST" onsubmit="return confirm('Excluir este pagamento?')" class="inline">
                                            <button class="text-red-600 hover:text-red-700 p-1 rounded hover:bg-red-50 transition-colors">
                                                <i class="fas fa-trash text-xs"></i>
                                            </button>
                                        </form>
                                    </li>
                                    <% }) %>
                                </ul>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <% } %>

                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="bg-gold p-6 bg-shine-gold">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-calendar-alt mr-3"></i>
                            <% if (isHistory) { %>Hist√≥rico de Agendamentos<% } else { %>Agendamentos<% } %>
                        </h2>
                    </div>
                    <div class="p-6">
                        <%
                        // CORRE√á√ÉO: L√≥gica de filtragem corrigida
                        let visible;
                        if (typeof isHistory !== 'undefined' && isHistory) {
                            // Se for hist√≥rico, mostra TODOS os agendamentos
                            visible = appointments || [];
                        } else {
                            // Se n√£o for hist√≥rico, aplica a filtragem original
                            visible = (appointments || []).filter(a => {
                                // transforma "DD/MM/YYYY ‚Ä¶" em Date
                                const [d, m, y] = a.formatted.split(' ')[0].split('/');
                                const apptDate = new Date(y + '-' + m + '-' + d + 'T00:00:00');
                                const todayMid = new Date();
                                todayMid.setHours(0,0,0,0);
                                // se for hoje ou no futuro
                                if (apptDate >= todayMid) return true;
                                // algum servi√ßo ainda n√£o foi pago integralmente?
                                for (let s of a.services || []) {
                                    const paid = (s.payments || []).reduce((sum,p)=> sum + p.amount, 0);
                                    if (paid < s.price) return true;
                                }
                                // algum produto ainda n√£o foi pago integralmente?
                                for (let p of a.products || []) {
                                    const paid = (p.payments || []).reduce((sum,q)=> sum + q.amount, 0);
                                    if (paid < p.price) return true;
                                }
                                return false;
                            });
                        }
                        %>

                        <% if (visible.length === 0) { %>
                        <div class="text-center py-8 text-gray-500">
                            <i class="fas fa-calendar-times text-4xl mb-4"></i>
                            <p><% if (isHistory) { %>Nenhum agendamento encontrado no hist√≥rico.<% } else { %>Nenhum agendamento futuro ou pendente.<% } %></p>
                        </div>
                        <% } else { %>
                        <div class="space-y-4">
                            <% visible.forEach(function(a) { 
                                const [datePart, , timePart] = a.formatted.split(' ');
                                
                                // Determina se √© um agendamento passado
                                const [d, m, y] = datePart.split('/');
                                const apptDate = new Date(y + '-' + m + '-' + d + 'T00:00:00');
                                const todayMid = new Date();
                                todayMid.setHours(0,0,0,0);
                                const isPast = apptDate < todayMid;
                            %>
                            <div class="bg-white p-4 rounded-xl border border-gray-200 <%= isPast ? 'opacity-75' : '' %>">
                                <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-3 lg:space-y-0 mb-4">
                                    <div>
