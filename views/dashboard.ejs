    <script>
        // === CONTROLE DE TEMA ===
        const htmlEl = document.documentElement;
        function updateIcons(theme) {
            const isLight = theme === 'light';
            document.getElementById('theme-icon-sun').classList.toggle('hidden', !isLight);
            document.getElementById('theme-icon-moon').classList.toggle('hidden', isLight);
            
            const mobIcon = document.getElementById('theme-icon-indicator-mobile');
            if(mobIcon) mobIcon.className = isLight ? "fas fa-sun text-orange-500" : "fas fa-moon text-blue-400";
        }
        function toggleTheme() {
            const themes = ["light", "medium-dark", "deep-dark"];
            const current = htmlEl.getAttribute('data-theme') || 'light';
            const next = themes[(themes.indexOf(current) + 1) % themes.length];
            htmlEl.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
            updateIcons(next);
        }
        document.getElementById('theme-toggle-btn').addEventListener('click', toggleTheme);
        document.getElementById('theme-toggle-btn-mobile').addEventListener('click', toggleTheme);
        updateIcons(localStorage.getItem('theme') || 'light');

        // === MENU MOBILE ===
        const menuBtn = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const closeMenu = document.getElementById('close-menu');
        function toggleMenu(show) {
            if(show) { mobileMenu.classList.remove('hidden'); document.body.style.overflow = 'hidden'; }
            else { mobileMenu.classList.add('hidden'); document.body.style.overflow = ''; }
        }
        if(menuBtn) menuBtn.addEventListener('click', () => toggleMenu(true));
        if(closeMenu) closeMenu.addEventListener('click', () => toggleMenu(false));

        // =========================================================================
        // === SOLUÇÃO DEFINITIVA PARA LINK E DNS (CORRIGIDO PARA O SEU ERRO) ===
        // =========================================================================
        
        // 1. Ao carregar a página, calcula o domínio atual (seja localhost ou render)
        document.addEventListener('DOMContentLoaded', function() {
            const input = document.getElementById('publicLinkInput');
            if(input) {
                // Recupera o final do link salvo no data-path
                const path = input.getAttribute('data-path');
                // Pega o domínio atual do navegador (ex: http://localhost:3003 ou https://seuapp.onrender.com)
                const currentOrigin = window.location.origin;
                // Atualiza o input com o link completo correto
                input.value = currentOrigin + path;
            }
        });

        // 2. Função para abrir o link (Funciona no Mobile e burla bloqueio de pop-up)
        function openDynamicLink() {
            const input = document.getElementById('publicLinkInput');
            if(input && input.value) {
                const url = input.value;
                // Tenta abrir em nova aba
                const newWindow = window.open(url, '_blank');
                // Se falhar (bloqueador de pop-up), força abertura na mesma aba
                if (!newWindow || newWindow.closed || typeof newWindow.closed == 'undefined') {
                    window.location.href = url;
                }
            }
        }

        // 3. Função de Copiar
        function copyLink() {
            const copyText = document.getElementById("publicLinkInput");
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            
            if (navigator.clipboard && window.isSecureContext) {
                 navigator.clipboard.writeText(copyText.value).then(showCheckIcon);
            } else {
                 document.execCommand('copy');
                 showCheckIcon();
            }
        }
        function showCheckIcon() {
            const btn = document.querySelector('button[title="Copiar"]');
            const oldContent = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-check text-green-600"></i>';
            setTimeout(() => btn.innerHTML = oldContent, 2000);
        }

        // =========================================================================
        // === ALERTAS DE PENDÊNCIA (ESTILO ANTIGO RESTAURADO) ===
        // =========================================================================
        
        function promptCancelReason(form) {
            const r = prompt("Motivo do cancelamento:");
            if(!r || r.trim() === "") return false;
            const i = document.createElement('input'); i.type='hidden'; i.name='cancellationReason'; i.value=r; form.appendChild(i);
            return true;
        }

        document.addEventListener('DOMContentLoaded', function() {
            const dataEl = document.getElementById('dashboard-data');
            if(!dataEl) return;

            try {
                const pending = JSON.parse(dataEl.dataset.pending || '[]');
                if (pending.length > 0) {
                    let html = '<div class="text-left text-sm max-h-60 overflow-y-auto space-y-3 p-1 custom-scroll">';
                    pending.forEach(appt => {
                        const dateObj = new Date(appt.date);
                        const dateStr = dateObj.toLocaleDateString('pt-BR', {day:'2-digit', month:'2-digit'});
                        const timeStr = appt.time || dateObj.toLocaleTimeString('pt-BR', {hour: '2-digit', minute:'2-digit'});
                        const cName = appt.Client ? appt.Client.name : 'Cliente';
                        const sName = (appt.AppointmentServices && appt.AppointmentServices[0]) ? appt.AppointmentServices[0].name : 'Serviço';
                        const pId = appt.id;
                        
                        html += `
                        <div class="bg-gray-50 p-3 rounded-lg border border-gray-200 shadow-sm">
                            <div class="flex justify-between items-start mb-2">
                                <div>
                                    <strong class="text-gray-800 block">${cName}</strong> 
                                    <span class="text-xs text-gray-500">${sName}</span>
                                </div>
                                <div class="text-xs font-bold text-yellow-700 bg-yellow-100 px-2 py-1 rounded">
                                    ${dateStr} - ${timeStr}
                                </div>
                            </div>
                            <div class="flex gap-2">
                                <form action="/admin/appointment/${pId}/confirm" method="POST" class="flex-1">
                                    <button class="w-full bg-green-100 text-green-700 py-1.5 rounded text-xs hover:bg-green-200 font-bold transition flex items-center justify-center">
                                        <i class="fas fa-check mr-1"></i> Aceitar
                                    </button>
                                </form>
                                <form action="/admin/appointment/${pId}/cancel-by-admin" method="POST" class="flex-1" onsubmit="return promptCancelReason(this)">
                                    <button class="w-full bg-red-100 text-red-700 py-1.5 rounded text-xs hover:bg-red-200 font-bold transition flex items-center justify-center">
                                        <i class="fas fa-times mr-1"></i> Recusar
                                    </button>
                                </form>
                            </div>
                        </div>`;
                    });
                    html += '</div>';
                    
                    Swal.fire({
                        title: `<div class="flex items-center justify-center gap-2 text-lg text-yellow-600 font-bold"><i class="fas fa-bell"></i> ${pending.length} Pendente(s)</div>`,
                        html: html,
                        showConfirmButton: false,
                        showCloseButton: true,
                        width: '400px',
                        padding: '1em',
                        background: 'var(--color-bg-secondary)',
                        color: 'var(--color-text-primary)'
                    });
                }
            } catch(e) { console.error(e); }
        });
    </script>
