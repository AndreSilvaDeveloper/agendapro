<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Dashboard – Studio Kadosh</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link
    href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    rel="stylesheet"
  >
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- Header / Navbar -->
  <header class="bg-white shadow-md">
    <div class="max-w-4xl mx-auto px-4 py-3 flex items-center justify-between">
      <!-- Logo em vez de texto -->
            <h1 class="text-2xl font-bold text-purple-700">Studio Kadosh</h1>
      <nav class="hidden md:flex space-x-6 items-center">
        <a href="/agendamentos-por-dia" class="text-gray-600 hover:text-gray-900">Agendamentos</a>
        <a href="/clients"              class="text-gray-600 hover:text-gray-900">Clientes</a>
        <a href="/financeiro"           class="text-gray-600 hover:text-gray-900">Financeiro</a>
        <a href="/balanco"              class="text-gray-600 hover:text-gray-900">Balanço Geral</a>
        <a href="/expenses"             class="text-gray-600 hover:text-gray-900">Lançamento de Despesas</a>
        <a href="/logout"               class="text-red-600 hover:text-red-800">Sair</a>
      </nav>
      <button id="menu-button" class="md:hidden p-2 rounded hover:bg-gray-200 focus:outline-none">
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden flex-col space-y-4 mb-6 px-4">
      <a href="/agendamentos-por-dia" class="block bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700">
        📅 Agendamentos
      </a>
      <a href="/clients" class="block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        👩🏾 Clientes
      </a>
      <a href="/financeiro" class="block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
        💵 Financeiro
      </a>
      <a href="/balanco" class="block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        ⚖️ Balanço Geral
      </a>
      <a href="/expenses" class="block bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700">
        💸 Lançamento de Despesas
      </a>
      <a href="/logout" class="block bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
        ⬅️ Sair
      </a>
    </div>

    <script>
      document.getElementById('menu-button').addEventListener('click', () => {
        document.getElementById('mobile-menu').classList.toggle('hidden');
      });
    </script>
  </header>

  <main class="flex-grow max-w-4xl mx-auto p-4 space-y-6">

    <!-- Receita Total (Serviços + Produtos) -->
    <section class="bg-white p-6 rounded-lg shadow-sm">
      <h2 class="text-2xl font-semibold mb-4">Receita Total</h2>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <!-- Hoje -->
        <div class="bg-green-50 p-4 rounded-lg flex flex-col items-center">
          <span class="text-3xl text-green-600">💰</span>
          <h3 class="mt-2 font-medium text-gray-700">Hoje</h3>
          <p class="mt-1 text-2xl font-bold text-green-800">
            R$ <%= receitaHoje.toFixed(2) %>
          </p>
        </div>
        <!-- Semana -->
        <div class="bg-yellow-50 p-4 rounded-lg flex flex-col items-center">
          <span class="text-3xl text-yellow-600">🗓️</span>
          <h3 class="mt-2 font-medium text-gray-700">Semana</h3>
          <p class="mt-1 text-2xl font-bold text-yellow-800">
            R$ <%= receitaSemana.toFixed(2) %>
          </p>
        </div>
        <!-- Mês -->
        <div class="bg-blue-50 p-4 rounded-lg flex flex-col items-center">
          <span class="text-3xl text-blue-600">📅</span>
          <h3 class="mt-2 font-medium text-gray-700">Mês</h3>
          <p class="mt-1 text-2xl font-bold text-blue-800">
            R$ <%= receitaMes.toFixed(2) %>
          </p>
        </div>
      </div>
    </section>

    <!-- Próximos Agendamentos (Hoje / Amanhã) -->
    <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
     <!-- HOJE -->
<div class="bg-white p-6 rounded-lg shadow-sm">
  <h2 class="text-xl font-semibold mb-4">Próximos Hoje</h2>
  <% if (!proximosHoje.length) { %>
    <p class="text-gray-500">Nenhum agendamento para hoje.</p>
  <% } else { %>
    <ul class="space-y-4">
      <% proximosHoje.forEach(item => { %>
        <li class="flex flex-col md:flex-row justify-between items-start md:items-center border-l-4 border-purple-500 pl-4">
          <div>
            <p class="font-medium text-gray-800">
              <a href="/client/<%= item.clientId %>" class="text-purple-700 hover:underline">
                <%= item.name %>
              </a> – <%= item.time %>
            </p>
            <p class="text-sm text-gray-600">Serviço: <%= item.service %></p>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>

     <!-- AMANHÃ -->
<div class="bg-white p-6 rounded-lg shadow-sm">
  <h2 class="text-xl font-semibold mb-4">Próximos Amanhã</h2>
  <% if (!proximosAmanha.length) { %>
    <p class="text-gray-500">Nenhum agendamento para amanhã.</p>
  <% } else { %>
    <ul class="space-y-4">
      <% proximosAmanha.forEach(item => { %>
        <li class="flex flex-col md:flex-row justify-between items-start md:items-center border-l-4 border-indigo-500 pl-4">
          <div>
            <p class="font-medium text-gray-800">
              <a href="/client/<%= item.clientId %>" class="text-purple-700 hover:underline">
                <%= item.name %>
              </a> – <%= item.time %>
            </p>
            <p class="text-sm text-gray-600">Serviço: <%= item.service %></p>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>

    </section>

  </main>
</body>
</html>
