        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .appointment-card {
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
        }
    </style>
