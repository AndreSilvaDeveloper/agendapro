<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Dashboard – Studio Kadosh</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <header class="bg-white shadow-md">
    <div class="max-w-4xl mx-auto px-4 py-3 flex items-center justify-between">
      <h1 class="text-xl font-bold">Studio Kadosh</h1>
      <button id="menu-button" aria-label="Abrir menu" class="md:hidden p-2 rounded hover:bg-gray-200 focus:outline-none">
        <span class="block w-6 h-0.5 bg-gray-800 mb-1 transition-transform" id="bar1"></span>
        <span class="block w-6 h-0.5 bg-gray-800 mb-1 transition-opacity" id="bar2"></span>
        <span class="block w-6 h-0.5 bg-gray-800 transition-transform" id="bar3"></span>
      </button>
      <nav id="menu" class="hidden md:flex space-x-4">
        <a href="/dashboard" class="text-gray-700 hover:text-gray-900">Dashboard</a>
        <a href="/agendamentos-por-dia" class="text-gray-700 hover:text-gray-900">Agendamentos</a>
        <a href="/clients" class="text-gray-700 hover:text-gray-900">Clientes</a>
        <a href="/financeiro" class="text-gray-700 hover:text-gray-900">Financeiro</a>
        <a href="/logout" class="text-red-600 hover:text-red-800">Sair</a>
      </nav>
    </div>
  </header>

  <script>
    const btn = document.getElementById('menu-button');
    const menu = document.getElementById('menu');
    const b1 = document.getElementById('bar1');
    const b2 = document.getElementById('bar2');
    const b3 = document.getElementById('bar3');
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
      b1.classList.toggle('rotate-45');
      b3.classList.toggle('-rotate-45');
      b2.classList.toggle('opacity-0');
    });
  </script>

  <main class="flex-grow max-w-4xl mx-auto p-4 space-y-6">

    <!-- Receita -->
    <section class="bg-white p-6 rounded shadow">
      <h2 class="text-2xl font-semibold mb-4">Receita</h2>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="bg-green-50 p-4 rounded">
          <h3 class="font-medium">Hoje</h3>
          <p class="mt-2 text-xl font-bold text-green-800">
            R$ <%= receitaHoje.toFixed(2) %>
          </p>
        </div>
        <div class="bg-yellow-50 p-4 rounded">
          <h3 class="font-medium">Semana</h3>
          <p class="mt-2 text-xl font-bold text-yellow-800">
            R$ <%= receitaSemana.toFixed(2) %>
          </p>
        </div>
        <div class="bg-blue-50 p-4 rounded">
          <h3 class="font-medium">Mês</h3>
          <p class="mt-2 text-xl font-bold text-blue-800">
            R$ <%= receitaMes.toFixed(2) %>
          </p>
        </div>
      </div>
    </section>

    <!-- Próximos Agendamentos -->
    <section class="bg-white p-6 rounded shadow space-y-6">
      <div>
        <h2 class="text-2xl font-semibold mb-2">Próximos Hoje</h2>
        <% if (proximosHoje.length) { %>
          <ul class="list-disc pl-5">
            <% proximosHoje.forEach(function(a) { %>
              <li><strong><%= a.name %></strong> – <%= a.time %></li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="text-gray-500">Nenhum agendamento hoje.</p>
        <% } %>
      </div>

      <div>
        <h2 class="text-2xl font-semibold mb-2">Próximos Amanhã</h2>
        <% if (proximosAmanha.length) { %>
          <ul class="list-disc pl-5">
            <% proximosAmanha.forEach(function(a) { %>
              <li><strong><%= a.name %></strong> – <%= a.time %></li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="text-gray-500">Nenhum agendamento amanhã.</p>
        <% } %>
      </div>
    </section>

  </main>

</body>
</html>
