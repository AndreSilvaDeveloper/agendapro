<!DOCTYPE html>
<html lang="pt-BR" class="h-full" data-theme="light">
<head>
    <meta charset="UTF-8">
    <title>Configuração WhatsApp – Agenda Pro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

    <script>
        (function() {
            const THEMES = ["light", "medium-dark", "deep-dark"];
            const savedTheme = localStorage.getItem('theme');
            let initialTheme = 'light';
            if (savedTheme && THEMES.includes(savedTheme)) {
                initialTheme = savedTheme;
            } else if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                initialTheme = 'deep-dark';
            }
            document.documentElement.setAttribute('data-theme', initialTheme);
        })();
    </script>

    <style>
        /* --- CORES DO TEMA --- */
        :root, [data-theme="light"] {
            --color-gold: #DAA520;
            --color-bg-primary: #f3f4f6;
            --color-bg-secondary: #ffffff;
            --color-text-primary: #1f2937;
        }
        [data-theme="medium-dark"] {
            --color-gold: #e0aa1f;
            --color-bg-primary: #1f2937;
            --color-bg-secondary: #374151;
            --color-text-primary: #f9fafb;
        }
        [data-theme="deep-dark"] {
            --color-gold: #e0aa1f;
            --color-bg-primary: #0a0e14;
            --color-bg-secondary: #1f2937;
            --color-text-primary: #f9fafb;
        }

        body { background-color: var(--color-bg-primary); color: var(--color-text-primary); }
        .bg-white { background-color: var(--color-bg-secondary); }
        .text-gray-800, .text-gray-700, .text-gray-600 { color: var(--color-text-primary); }
        
        .text-gold { color: var(--color-gold); }
        .bg-gold { background-color: var(--color-gold); }
        
        /* Loader */
        .loader {
            border: 4px solid #f3f3f3;
            border-top: 4px solid var(--color-gold);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    </style>
</head>
<body class="font-sans antialiased flex flex-col h-full">

    <header class="bg-white shadow-md border-b border-gray-200 shrink-0 h-16 flex items-center px-4 justify-between sticky top-0 z-50">
        <div class="flex items-center">
            <button onclick="history.back()" class="mr-4 text-gray-600 hover:text-gold transition-colors">
                <i class="fas fa-arrow-left"></i> Voltar
            </button>
            <h1 class="text-lg font-bold">Configuração WhatsApp</h1>
        </div>
        <nav class="hidden xl:flex items-center space-x-4 text-sm">
            <button id="theme-toggle-btn" class="p-2 rounded-lg hover:bg-gray-100 transition-colors">
                <i id="theme-icon-sun" class="fas fa-sun"></i> <i id="theme-icon-moon" class="fas fa-moon hidden"></i> 
            </button>
        </nav>
    </header>

    <div class="flex-1 max-w-4xl mx-auto w-full p-6">
        
        <div class="text-right mb-4 text-sm opacity-70">
            Org ID: <%= orgId %>
        </div>

        <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 mb-8">
            <div class="p-6 border-b border-gray-100">
                <h2 class="text-xl font-bold text-gray-800 flex items-center">
                    <i class="fab fa-whatsapp mr-2 text-green-500 text-2xl"></i>
                    Status da Conexão
                </h2>
            </div>
            
            <div class="p-8 text-center">
                <div id="status-icon-container" class="mb-4">
                    <i class="fas fa-circle-notch fa-spin text-4xl text-gray-400"></i>
                </div>

                <h3 id="status-text" class="text-2xl font-bold mb-2">Verificando...</h3>
                <p id="status-desc" class="opacity-70 mb-6">Aguarde enquanto verificamos a conexão com o servidor.</p>

                <!-- Área do QR Code -->
                <div id="qr-container" class="hidden bg-white p-4 rounded-xl border-2 border-dashed border-gray-300 inline-block mb-6">
                    <div id="qrcode" class="flex justify-center"></div>
                    <p class="text-sm text-gray-500 mt-2">Abra o WhatsApp > Menu > Aparelhos conectados</p>
                </div>

                <!-- NOVA ÁREA: Conexão por Número (Pairing Code) -->
                <div id="pairing-container" class="hidden max-w-sm mx-auto mt-4 pt-4 border-t border-gray-200">
                    <p class="text-sm font-bold mb-2">Está usando este celular?</p>
                    <button id="btn-toggle-pairing" class="text-blue-600 underline text-sm hover:text-blue-800 mb-4" onclick="togglePairingMode()">
                        Conectar usando número de telefone
                    </button>

                    <div id="pairing-form" class="hidden bg-gray-50 p-4 rounded-lg border border-gray-200">
                        <label class="block text-left text-xs font-bold text-gray-600 mb-1">Seu número (com DDD):</label>
                        <div class="flex space-x-2">
                            <input type="text" id="phone-input" placeholder="Ex: 11999998888" class="border border-gray-300 rounded px-3 py-2 w-full text-gray-800 focus:ring-2 focus:ring-yellow-400 outline-none">
                            <button onclick="getPairingCode()" class="bg-yellow-500 text-white px-4 py-2 rounded font-bold hover:bg-yellow-600 transition-colors">
                                Gerar
                            </button>
                        </div>
                        <p class="text-xs text-gray-400 mt-2 text-left">Você receberá um código. No WhatsApp vá em: <b>Aparelhos Conectados > Conectar > Conectar com número de telefone</b>.</p>
                    </div>

                    <!-- Exibição do Código -->
                    <div id="pairing-code-display" class="hidden mt-4 bg-white p-4 rounded-lg border-2 border-green-500 shadow-md">
                        <p class="text-sm text-gray-600 mb-2">Digite este código no seu WhatsApp:</p>
                        <div class="text-3xl font-mono font-bold tracking-widest text-gray-900 select-all cursor-pointer" id="code-value" onclick="copyCode(this)">
                            ---
                        </div>
                        <p class="text-xs text-green-600 mt-2 font-semibold">Código copiado ao clicar!</p>
                    </div>
                </div>
                <!-- FIM NOVA ÁREA -->

                <div id="actions-container" class="mt-6">
                    <button id="btn-connect" onclick="startConnection()" class="hidden bg-green-600 text-white px-8 py-3 rounded-lg font-bold hover:bg-green-700 transition-colors shadow-lg">
                        <i class="fas fa-qrcode mr-2"></i> Iniciar Conexão
                    </button>

                    <button id="btn-disconnect" onclick="logout()" class="hidden bg-red-100 text-red-700 px-8 py-3 rounded-lg font-bold hover:bg-red-200 transition-colors border border-red-200">
                        <i class="fas fa-sign-out-alt mr-2"></i> Desconectar
                    </button>
                </div>
            </div>
        </div>

        <div class="bg-blue-50 rounded-xl p-6 border border-blue-100 text-gray-800">
            <h4 class="font-bold text-blue-800 mb-2"><i class="fas fa-info-circle mr-2"></i> Como funciona?</h4>
            <ul class="list-disc list-inside text-blue-700 space-y-1 text-sm">
                <li>Escaneie o QR Code <b>OU</b> use a opção de "Conectar com número".</li>
                <li>O sistema manterá a conexão ativa para envios automáticos.</li>
                <li>Se a conexão cair, você precisará reconectar aqui.</li>
            </ul>
        </div>
    </div>

    <script>
        // === 1. Lógica de Tema ===
        const THEMES = ["light", "medium-dark", "deep-dark"];
        const htmlEl = document.documentElement;

        function updateIcons(theme) {
            const isLight = theme === 'light';
            const sun = document.getElementById('theme-icon-sun');
            const moon = document.getElementById('theme-icon-moon');
            if(sun) sun.classList.toggle('hidden', !isLight);
            if(moon) moon.classList.toggle('hidden', isLight);
        }

        function toggleTheme() {
            const currentTheme = htmlEl.getAttribute('data-theme') || 'light';
            const currentIndex = THEMES.indexOf(currentTheme);
            const nextIndex = (currentIndex + 1) % THEMES.length;
            const newTheme = THEMES[nextIndex];
            htmlEl.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateIcons(newTheme);
        }

        document.getElementById('theme-toggle-btn').addEventListener('click', toggleTheme);
        updateIcons(localStorage.getItem('theme') || 'light');

        // === 2. Lógica WhatsApp (Socket.IO + API) ===
        const socket = io(); 
        const orgId = "<%= orgId %>"; 
        
        const statusText = document.getElementById('status-text');
        const statusDesc = document.getElementById('status-desc');
        const statusIcon = document.getElementById('status-icon-container');
        const qrContainer = document.getElementById('qr-container');
        const qrcodeDiv = document.getElementById('qrcode');
        const btnConnect = document.getElementById('btn-connect');
        const btnDisconnect = document.getElementById('btn-disconnect');
        const pairingContainer = document.getElementById('pairing-container');

        // Atualiza a UI baseada no estado
        function updateUI(state) {
            qrContainer.classList.add('hidden');
            btnConnect.classList.add('hidden');
            btnDisconnect.classList.add('hidden');
            pairingContainer.classList.add('hidden'); // Esconde pareamento por padrão
            qrcodeDiv.innerHTML = ""; 

            if (state === 'CONNECTED' || state === 'AUTHENTICATED') {
                statusIcon.innerHTML = '<i class="fas fa-check-circle text-5xl text-green-500"></i>';
                statusText.innerText = 'WhatsApp Conectado';
                statusDesc.innerText = 'O sistema está pronto para enviar mensagens.';
                btnDisconnect.classList.remove('hidden');
            } 
            else if (state === 'DISCONNECTED') {
                statusIcon.innerHTML = '<i class="fas fa-wifi text-5xl opacity-50"></i>';
                statusText.innerText = 'Desconectado';
                statusDesc.innerText = 'Nenhuma sessão ativa encontrada.';
                btnConnect.classList.remove('hidden');
            }
            else if (state === 'QR_RECEIVED') {
                statusIcon.innerHTML = '<div class="loader"></div>';
                statusText.innerText = 'Escaneie ou Digite o Código';
                statusDesc.innerText = 'Aguardando autenticação...';
                
                qrContainer.classList.remove('hidden');
                pairingContainer.classList.remove('hidden'); // Mostra opção de pareamento
            }
            else if (state === 'INITIALIZING') {
                statusIcon.innerHTML = '<div class="loader"></div>';
                statusText.innerText = 'Iniciando...';
                statusDesc.innerText = 'Preparando o cliente WhatsApp (isso pode levar até 1 minuto no plano gratuito).';
            }
        }

        // --- Novas Funções de Pareamento ---
        function togglePairingMode() {
            const form = document.getElementById('pairing-form');
            form.classList.toggle('hidden');
        }

        async function getPairingCode() {
            const phone = document.getElementById('phone-input').value;
            if (!phone) return alert('Digite o número do celular!');

            const display = document.getElementById('pairing-code-display');
            const codeValue = document.getElementById('code-value');
            const btnGenerate = document.querySelector('#pairing-form button');
            
            // UI de carregamento
            codeValue.innerText = '...';
            display.classList.remove('hidden');
            btnGenerate.disabled = true;
            btnGenerate.innerText = 'Aguarde...';

            try {
                // Chama a nova rota
                const res = await fetch('/api/admin/whatsapp/pairing-code', { // Ajuste conforme sua rota exata
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ phoneNumber: phone })
                });
                const data = await res.json();
                
                if (data.success) {
                codeValue.innerText = data.code;
                } else {
                display.classList.add('hidden');
                alert(data.error || 'Não foi possível gerar o código agora. Tente usar o QR Code para conectar.');
                }

            } catch (e) {
                console.error(e);
                alert('Falha ao comunicar com servidor');
                display.classList.add('hidden');
            } finally {
                btnGenerate.disabled = false;
                btnGenerate.innerText = 'Gerar';
            }
        }

        function copyCode(element) {
            const text = element.innerText;
            navigator.clipboard.writeText(text).then(() => {
                alert('Código copiado: ' + text);
            });
        }
        // -----------------------------------

        // Socket Listeners
        socket.on('qr-' + orgId, (qrCodeData) => {
            // Só atualiza se ainda não estivermos mostrando
            if (qrContainer.classList.contains('hidden')) {
                updateUI('QR_RECEIVED');
            }
            qrcodeDiv.innerHTML = "";
            new QRCode(qrcodeDiv, { text: qrCodeData, width: 256, height: 256 });
        });

        socket.on('status-' + orgId, (data) => {
            updateUI(data.status);
        });

        // Ações API
        async function checkInitialStatus() {
            try {
                const res = await fetch('/api/whatsapp/status');
                const data = await res.json();
                updateUI(data.status);
            } catch (error) { console.error(error); }
        }

        async function startConnection() {
            updateUI('INITIALIZING');
            try {
                await fetch('/api/whatsapp/connect', { method: 'POST' });
            } catch (error) { alert('Erro ao conectar'); updateUI('DISCONNECTED'); }
        }

        async function logout() {
            if(!confirm('Desconectar o WhatsApp?')) return;
            try {
                await fetch('/api/whatsapp/logout', { method: 'POST' });
                updateUI('DISCONNECTED');
            } catch (error) { alert('Erro ao desconectar'); }
        }

      
        document.addEventListener('DOMContentLoaded', checkInitialStatus);
    </script>
</body>
</html>