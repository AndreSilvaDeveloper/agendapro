<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-R">
    <title><%= pageTitle %> – AgendaPro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        /* --- ESTILOS COMPLETOS DO LAYOUT (COPIADOS) --- */
        :root {
            --color-gold-light: #FFD700;
            --color-gold-dark: #B8860B;
            --color-gold-accent: #DAA520;
        }
        .text-gold-dark { color: var(--color-gold-dark); }
        .bg-gold { background-color: var(--color-gold-accent); }
        .border-gold { border-color: var(--color-gold-accent); }
        .ring-gold-dark { --tw-ring-color: var(--color-gold-dark); }
        .hover\:bg-gold-dark:hover { background-color: var(--color-gold-dark); }
        
        .text-gold { color: var(--color-gold-dark); }
        .bg-gold-light { background-color: #FFFBEB; }
        .hover\:text-gold:hover { color: var(--color-gold-dark); }
        .text-gradient-gold {
            background: linear-gradient(90deg, #B8860B, #FFD700, #DAA520, #FFD700, #B8860B);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
            background-size: 200% auto;
            animation: text-shine 4s linear infinite;
        }
        @keyframes text-shine {
            from { background-position: 200% center; }
            to { background-position: 0% center; }
        }
        
        /* Estilos para inputs focados (do seu arquivo original) */
        .form-input:focus, .form-textarea:focus, .form-checkbox:focus, input[type="time"]:focus {
            border-color: var(--color-gold-dark);
            box-shadow: 0 0 0 2px var(--color-gold-light);
            outline: none;
        }
        /* Estilos de input[type=time] (do seu arquivo original) */
        input[type="time"]::-webkit-calendar-picker-indicator {
            cursor: pointer; opacity: 0.6; filter: invert(0.6) sepia(1) saturate(5) hue-rotate(10deg);
        }
        input[type="time"]:hover::-webkit-calendar-picker-indicator { opacity: 0.8; }
        .day-row:has(input[type="checkbox"][name$="[isOff]"]:checked) input[type="time"] {
             visibility: hidden;
        }
    </style>
</head>
<body class="min-h-screen bg-gray-50 font-sans antialiased">

    <% /* ============================
       =  HELPERS SEGUROS (ID e PREÇO)
       ============================ */ %>
    <%
      // Converte vários formatos (12.34 / 12,34 / 1.234,56) para número
      const toNumber = (v) => {
        if (v === null || v === undefined) return null;
        if (typeof v === 'number') return Number.isFinite(v) ? v : null;
        if (typeof v === 'string') {
          const cleaned = v.trim().replace(/\s+/g, '').replace(/\./g, '').replace(/,/g, '.');
          const parsed = parseFloat(cleaned);
          return Number.isNaN(parsed) ? null : parsed;
        }
        return null;
      };
      const formatPriceBRL = (v) => {
        const n = toNumber(v);
        const safe = (n === null) ? 0 : n;
        return safe.toLocaleString('pt-BR', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
      };

      // Lista de serviços disponíveis (garante que é array)
      const available = Array.isArray(availableServices) ? availableServices : [];
      
      // Lista de serviços que o profissional JÁ FAZ (vindo do controller)
      // CORREÇÃO: Usar 'Services' (maiúsculo)
      const selectedServiceObjects = (staffMember && Array.isArray(staffMember.Services)) ? staffMember.Services : [];
      
      // Cria um Set (conjunto) de IDs (convertidos para String) para checagem rápida
      const selectedIds = new Set(selectedServiceObjects.map(s => String(s.id)));
    %>

    <header class="bg-white sticky top-0 z-50 shadow-sm border-b border-gray-100">
        <div class="max-w-7xl mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <h1 class="flex items-center">
                        <img src="/images/kadosh.jpg" alt="Studio Kadosh Logo" class="h-9">
                    </h1>
                    <div class="h-6 w-px bg-gray-200"></div>
                    <span class="text-lg font-semibold text-gray-700 flex items-center">
                        <i class="fas fa-users-cog mr-2 text-gold"></i>
                        <%= pageTitle %>
                    </span>
                </div>
                
                <nav class="hidden lg:flex items-center space-x-6">
                    <a href="/dashboard" class="text-gray-600 hover:text-gold transition-colors">
                        <i class="fas fa-home mr-2"></i>Dashboard
                    </a>
                    <a href="/agendamentos-por-dia" class="text-gray-600 hover:text-gold transition-colors">
                        <i class="fas fa-calendar-alt mr-2"></i>Agendamentos
                    </a>
                    <a href="/clients" class="text-gray-600 hover:text-gold transition-colors">
                        <i class="fas fa-users mr-2"></i>Clientes
                    </a>
                    <a href="/admin/servicos" class="text-gray-600 hover:text-gold transition-colors">
                        <i class="fas fa-tags mr-2"></i>Serviços
                    </a>
                    <a href="/admin/equipe" class="text-gradient-gold font-semibold">
                        <i class="fas fa-users-cog mr-2"></i>Equipe
                    </a>
                    <a href="/financeiro" class="text-gray-600 hover:text-gold transition-colors">
                        <i class="fas fa-dollar-sign mr-2"></i>Financeiro
                    </a>
                    <a href="/balanco" class="text-gray-600 hover:text-gold transition-colors">
                        <i class="fas fa-balance-scale mr-2"></i>Balanço
                    </a>
                    <a href="/expenses" class="text-gray-600 hover:text-gold transition-colors">
                        <i class="fas fa-receipt mr-2"></i>Despesas
                    </a>
                    <a href="/logout" class="text-red-600 hover:text-red-700 transition-colors">
                        <i class="fas fa-sign-out-alt mr-2"></i>Sair
                    </a>
                </nav>

                <button id="menu-button" class="lg:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors">
                    <i class="fas fa-bars text-gradient-gold"></i>
                </button>
            </div>

            <div id="mobile-menu" class="hidden lg:hidden mt-4 space-y-2">
                <a href="/dashboard" class="flex items-center space-x-3 p-3 rounded-lg text-gray-700 hover:bg-gray-100 hover:text-gold">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/agendamentos-por-dia" class="flex items-center space-x-3 p-3 rounded-lg text-gray-700 hover:bg-gray-100 hover:text-gold">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Agendamentos</span>
                </a>
                <a href="/clients" class="flex items-center space-x-3 p-3 rounded-lg text-gray-700 hover:bg-gray-100 hover:text-gold">
                    <i class="fas fa-users"></i>
                    <span>Clientes</span>
                </a>
                <a href="/admin/servicos" class="flex items-center space-x-3 p-3 rounded-lg text-gray-700 hover:bg-gray-100 hover:text-gold">
                    <i class="fas fa-tags"></i>
                    <span>Serviços</span>
                </a>
                <a href="/admin/equipe" class="flex items-center space-x-3 p-3 rounded-lg bg-gold-light text-gold font-semibold">
                    <i class="fas fa-users-cog"></i>
                    <span>Equipe</span>
                </a>
                <a href="/financeiro" class="flex items-center space-x-3 p-3 rounded-lg text-gray-700 hover:bg-gray-100 hover:text-gold">
                    <i class="fas fa-dollar-sign"></i>
                    <span>Financeiro</span>
                </a>
                <a href="/balanco" class="flex items-center space-x-3 p-3 rounded-lg text-gray-700 hover:bg-gray-100 hover:text-gold">
                    <i class="fas fa-balance-scale"></i>
                    <span>Balanço</span>
                </a>
                <a href="/expenses" class="flex items-center space-x-3 p-3 rounded-lg text-gray-700 hover:bg-gray-100 hover:text-gold">
                    <i class="fas fa-receipt"></i>
                    <span>Despesas</span>
                </a>
                <a href="/logout" class="flex items-center space-x-3 p-3 rounded-lg text-red-600 hover:text-red-100">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Sair</span>
                </a>
            </div>
        </div>
    </header>
    <main class="container mx-auto max-w-2xl p-4 sm:p-8 py-8">
        
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <div class="bg-gray-50 p-5 border-b border-gray-200 flex justify-between items-center">
                <h1 class="text-2xl font-bold text-gray-800"><%= pageTitle %></h1>
                <a href="/admin/equipe" class="text-sm text-gray-600 hover:text-gold-dark transition-colors">
                    <i class="fas fa-arrow-left mr-1"></i> Voltar para Lista
                </a>
            </div>

            <form action="<%= editing ? '/admin/equipe/' + staffMember.id + '/editar' : '/admin/equipe/novo' %>" 
                  method="POST" 
                  class="p-8 space-y-6"
                  enctype="multipart/form-data">
                

                <% if (error) { %>
                    <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                        <i class="fas fa-exclamation-triangle mr-2"></i><%= error %>
                    </div>
                <% } %>

                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nome do Profissional *</label>
                    <input type="text" id="name" name="name" required 
                           value="<%= staffMember.name || '' %>"
                           class="form-input mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:ring-gold-dark focus:border-gold-dark">
                </div>
                
                <div>
                    <label for="staffPhoto" class="block text-sm font-medium text-gray-700 mb-1">Foto do Profissional (Opcional)</label>
                    
                    <% if (editing && staffMember.imageUrl) { %>
                        <div class="my-2">
                            <img src="<%= staffMember.imageUrl %>" alt="<%= staffMember.name %>" class="w-24 h-24 rounded-full object-cover border border-gray-200 p-1">
                            <p class="mt-1 text-xs text-gray-500">Foto atual. Enviar uma nova foto irá substituí-la.</p>
                        </div>
                    <% } %>
                    
                    <input type="file" 
                           id="staffPhoto" 
                           name="staffPhoto" 
                           accept="image/*"
                           class="form-input mt-1 block w-full border border-gray-300 rounded-md shadow-sm text-sm text-gray-500
                                  file:mr-4 file:py-2 file:px-4
                                  file:rounded-full file:border-0
                                  file:text-sm file:font-semibold
                                  file:bg-gold file:text-white
                                  hover:file:bg-gold-dark hover:file:cursor-pointer">
                    
                    <input type="hidden" name="oldImageUrl" value="<%= staffMember.imageUrl || '' %>">
                </div>
                
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Serviços que Realiza</label>
                    <div class="space-y-2 max-h-60 overflow-y-auto border border-gray-200 rounded-md p-4">
                        <% if (!Array.isArray(available) || available.length === 0) { %>
                            <p class="text-sm text-gray-500">Nenhum serviço ativo cadastrado. Cadastre serviços primeiro.</p>
                        <% } else { %>
                            <% available.forEach(service => { 
                                 // CORREÇÃO: Usar service.id (Sequelize usa 'id')
                                 const sid = String(service.id);
                            %>
                                <div class="flex items-center">
                                    <input id="service_<%= sid %>" name="services" type="checkbox" value="<%= sid %>"
                                           class="form-checkbox h-4 w-4 text-gold-dark border-gray-300 rounded focus:ring-gold-dark"
                                           <%= selectedIds.has(sid) ? 'checked' : '' %>>
                                    <label for="service_<%= sid %>" class="ml-2 block text-sm text-gray-900">
                                        <%= (service && service.name) ? service.name : '—' %> (R$ <%= formatPriceBRL(service && service.price) %>)
                                    </label>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>

                <div class="pt-4 border-t border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Horários de Trabalho Padrão</h3>
                    <div class="space-y-4">
                        <% 
                        const daysOfWeek = [
                            { key: 'monday', label: 'Segunda-feira' }, { key: 'tuesday', label: 'Terça-feira' },
                            { key: 'wednesday', label: 'Quarta-feira' }, { key: 'thursday', label: 'Quinta-feira' },
                            { key: 'friday', label: 'Sexta-feira' }, { key: 'saturday', label: 'Sábado' },
                            { key: 'sunday', label: 'Domingo' }
                        ];
                        const currentHours = staffMember.workingHours || {};
                        %>

                        <% daysOfWeek.forEach(day => { %>
                            <% const hours = currentHours[day.key] || { startTime: '', endTime: '', isOff: false }; %>
                            <div class="day-row grid grid-cols-1 sm:grid-cols-4 gap-4 items-center border-b pb-4 last:border-b-0">
                                <label class="block text-sm font-medium text-gray-700 sm:col-span-1"><%= day.label %></label>
                                
                                <div class="sm:col-span-1">
                                    <label for="startTime_<%= day.key %>" class="block text-xs text-gray-500 mb-1">Início</label>
                                    <input type="time" id="startTime_<%= day.key %>" name="workingHours[<%= day.key %>][startTime]" 
                                           value="<%= hours.startTime || '' %>" 
                                           class="form-input block w-full border border-gray-300 rounded-md shadow-sm py-1 px-2 text-sm">
                                </div>
                                
                                <div class="sm:col-span-1">
                                    <label for="endTime_<%= day.key %>" class="block text-xs text-gray-500 mb-1">Fim</label>
                                    <input type="time" id="endTime_<%= day.key %>" name="workingHours[<%= day.key %>][endTime]" 
                                           value="<%= hours.endTime || '' %>" 
                                           class="form-input block w-full border border-gray-300 rounded-md shadow-sm py-1 px-2 text-sm">
                                </div>

                                <div class="sm:col-span-1 flex items-center pt-5">
                                    <input id="isOff_<%= day.key %>" name="workingHours[<%= day.key %>][isOff]" type="checkbox" value="true"
                                           class="form-checkbox h-4 w-4 text-gold-dark border-gray-300 rounded focus:ring-gold-dark"
                                           <%= hours.isOff ? 'checked' : '' %>>
                                    <label for="isOff_<%= day.key %>" class="ml-2 block text-sm text-gray-900">
                                        Folga
                                    </label>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
                
                <div class="flex items-center pt-4 border-t border-gray-200">
                    <input id="isActive" name="isActive" type="checkbox" 
                           class="form-checkbox h-4 w-4 text-gold-dark border-gray-300 rounded focus:ring-gold-dark"
                           <%= (typeof staffMember.isActive === 'undefined' || staffMember.isActive) ? 'checked' : '' %>>
                    <label for="isActive" class="ml-2 block text-sm text-gray-900">
                        Membro Ativo (disponível para agendamento)
                    </label>
                </div>

                <div class="pt-5">
                    <button type="submit"
                            class="w-full bg-gold text-white py-3 px-6 rounded-lg font-semibold hover:opacity-90 transition-opacity shadow flex items-center justify-center">
                        <i class="fas fa-save mr-2"></i>
                        <%= editing ? 'Atualizar Membro' : 'Salvar Novo Membro' %>
                    </button>
                </div>

            </form>
        </div>
    </main>

    <footer class="bg-white border-t border-gray-200 mt-12">
        <div class="max-w-7xl mx-auto px-4 py-6">
            <div class="text-center text-gray-600">
                <p class="flex items-center justify-center">
                    <i class="fas fa-crown mr-2 text-gold"></i>
                    Studio Kadosh © <%= new Date().getFullYear() %>
                </p>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        const menuButton = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (menuButton && mobileMenu) {
            menuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }
    </script>
</body>
</html>