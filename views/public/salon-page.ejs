<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title><%= org.name %> – Agendamento Online</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --color-gold-light: #FFD700;
            --color-gold-dark: #B8860B;
            --color-gold-accent: #DAA520;
        }
        
        /* --- MUDANÇA 1: Adicionando o fundo global --- */
        body {
            background-image: url('/images/background-login.png'); 
            background-size: cover;       
            background-position: center;  
            background-repeat: no-repeat; 
            background-attachment: fixed; 
        }

        .text-gold-dark { color: var(--color-gold-dark); }
        .text-gold-accent { color: var(--color-gold-accent); }
        .bg-gold { background-color: var(--color-gold-accent); }
        .border-gold { border-color: var(--color-gold-accent); }
        .ring-gold-dark { --tw-ring-color: var(--color-gold-dark); }

        .hero-bg-default {
            background: linear-gradient(135deg, var(--color-gold-dark) 0%, var(--color-gold-accent) 100%);
        }
        .hero-bg-image {
             background-size: cover;
             background-position: center;
        }
    </style>
</head>
<body class="">

    <header class="text-white p-8 sm:p-16 rounded-b-3xl shadow-xl
                   <% if (org.coverImageUrl) { %>
                       hero-bg-image
                   <% } else { %>
                       hero-bg-default
                   <% } %>"
            <% if (org.coverImageUrl) { %>
                style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= org.coverImageUrl %>');"
            <% } %> >
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl sm:text-6xl font-bold break-words">
                <%= org.name %>
            </h1>
            <% if (org.address) { %>
                <p class="text-lg sm:text-xl text-yellow-100 mt-2">
                    <i class="fas fa-map-marker-alt fa-fw mr-1"></i>
                    <%= org.address %>
                </p>
            <% } %>
        </div>
    </header>

    <main class="max-w-4xl mx-auto p-4 sm:p-8 -mt-10 sm:-mt-16">

        <div class="bg-black/30 backdrop-blur-lg rounded-2xl shadow-2xl p-6 grid grid-cols-1 sm:grid-cols-2 gap-4">
            <a href="/portal/<%= org._id %>/registro"
               class="w-full bg-gold text-white text-center py-4 px-6 rounded-xl font-bold text-lg hover:opacity-90 transition-all shadow-lg flex items-center justify-center">
                <i class="fas fa-calendar-plus mr-3"></i>
                <span>Agendar Horário</span>
            </a>
            <a href="/portal/<%= org._id %>/login"
               class="w-full bg-white text-gold-dark border-2 border-gold text-center py-4 px-6 rounded-xl font-bold text-lg hover:bg-gray-50 transition-all shadow-lg flex items-center justify-center">
                <i class="fas fa-sign-in-alt mr-3"></i>
                <span>Já tenho conta</span>
            </a>
        </div>

        <div class="mt-8 bg-black/30 backdrop-blur-lg rounded-2xl shadow-xl p-6">
            <h2 class="text-2xl font-bold text-white mb-6">Informações</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">

                <% if (org.address) { %>
                <div class="flex items-start space-x-4">
                    <i class="fas fa-map-marker-alt fa-2x text-gold-accent mt-1"></i>
                    <div>
                        <h3 class="font-semibold text-gray-100">Endereço</h3>
                        <p class="text-gray-200"><%= org.address %></p>
                        </div>
                </div>
                <% } %>

                <% if (org.whatsapp) { %>
                <div class="flex items-start space-x-4">
                    <i class="fab fa-whatsapp fa-2x text-green-500 mt-1"></i>
                    <div>
                        <h3 class="font-semibold text-gray-100">WhatsApp</h3>
                        <p class="text-gray-200"><%= org.whatsapp %></p>
                        <a href="https://wa.me/<%= org.whatsapp.replace(/\D/g, '') %>" target="_blank"
                           class="text-sm text-blue-400 hover:underline">
                           Enviar mensagem
                        </a>
                    </div>
                </div>
                <% } %>

                <% if (org.phone) { %>
                <div class="flex items-start space-x-4">
                    <i class="fas fa-phone fa-2x text-gold-accent mt-1"></i>
                    <div>
                        <h3 class="font-semibold text-gray-100">Telefone Fixo</h3>
                        <p class="text-gray-200"><%= org.phone %></p>
                    </div>
                </div>
                <% } %>

                <% if (org.operatingHours) { %>
                <div class="flex items-start space-x-4">
                    <i class="fas fa-clock fa-2x text-gold-accent mt-1"></i>
                    <div>
                        <h3 class="font-semibold text-gray-100">Horário</h3>
                        <p class="text-gray-200 whitespace-pre-line"><%= org.operatingHours %></p>
                    </div>
                </div>
                <% } %>

            </div>
        </div>

        <div class="mt-8 bg-black/30 backdrop-blur-lg rounded-2xl shadow-xl p-6">
            <h2 class="text-2xl font-bold text-white mb-6">Nossos Serviços</h2>

            <% if (services.length === 0) { %>
                <p class="text-gray-200">O salão ainda não cadastrou seus serviços.</p>
            <% } else { %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <% services.forEach(service => { %>
                        <div class="bg-black/20 p-5 rounded-xl border border-gray-600 shadow-sm">
                            <h3 class="text-xl font-semibold text-gold-dark"><%= service.name %></h3>
                            <p class="text-lg font-bold text-white mt-1">
                                R$ <%= service.price.toFixed(2).replace('.', ',') %>
                            </p>
                            <p class="text-sm text-gray-300"><%= service.duration %> minutos</p>
                            <% if (service.description) { %>
                                <p class="text-gray-200 text-sm mt-3"><%= service.description %></p>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>

        <% if (staff.length > 0) { %>
        <div class="mt-8 bg-black/30 backdrop-blur-lg rounded-2xl shadow-xl p-6">
            <h2 class="text-2xl font-bold text-white mb-6">Nossa Equipe</h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
                <% staff.forEach(member => { %>
                    <div class="text-center">
                        <div class="w-24 h-24 mx-auto rounded-full bg-black/20 flex items-center justify-center overflow-hidden border border-gray-600">
                            <% if (member.imageUrl) { %>
                                <img src="<%= member.imageUrl %>" alt="<%= member.name %>" class="w-full h-full object-cover">
                            <% } else { %>
                                <i class="fas fa-user fa-3x text-gray-400"></i>
                            <% } %>
                        </div>
                        <h4 class="mt-3 font-semibold text-gray-100"><%= member.name %></h4>
                    </div>
                <% }); %>
            </div>
        </div>
        <% } %>

    </main>

    <footer class="text-center py-10">
        <p class="text-sm text-gray-200">
            <i class="fas fa-crown mr-1.5 text-gold-accent"></i>
            <%= org.name %> © <%= new Date().getFullYear() %>
        </p> 
        <p class="text-xs text-gray-300 mt-4">
            <a href="/login" class="hover:underline">Acesso do Administrador</a>
        </p>
    </footer>

</body>
</html>