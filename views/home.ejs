                    <div>
                        <p class="text-xs text-gray-500">Total de Clientes</p>
                        <p class="text-lg font-bold text-gray-800"><%= (typeof clients !== 'undefined') ? clients.length : 0 %></p>
                    </div>
                    <div class="w-8 h-8 bg-gold-light rounded-full flex items-center justify-center text-gold">
                        <i class="fas fa-database"></i>
                    </div>
                 </div>

            </div>

            <div class="lg:col-span-8 bg-white rounded-lg shadow-xl border border-gray-200 flex flex-col compact-card-container min-h-0">
                
                <div class="p-3 border-b border-gray-200 bg-gray-50 shrink-0 flex justify-between items-center">
                    <h2 class="text-md font-bold text-gray-800 flex items-center">
                        <i class="fas fa-list mr-2 text-gold"></i>
                        <% if (typeof query !== 'undefined' && query) { %>
                            Resultados para "<%= query %>"
                        <% } else { %>
                            Lista de Clientes
                        <% } %>
                    </h2>
                    <% if (typeof query !== 'undefined' && query) { %>
                        <a href="/clients" class="text-xs text-red-500 hover:text-red-700 font-medium">
                            <i class="fas fa-times mr-1"></i>Limpar
                        </a>
                    <% } %>
