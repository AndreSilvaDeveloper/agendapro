<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Clientes ‚Äì Studio Kadosh</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .gradient-purple {
            background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
        }
        .gradient-blue {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        }
        .gradient-green {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }
        .gradient-yellow {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        }
        .gradient-red {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .client-card {
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
        }
        .client-card:hover {
            border-left-color: #8b5cf6;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        }
        .search-highlight {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            padding: 0.125rem 0.25rem;
            border-radius: 0.25rem;
            font-weight: 600;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50">
    <!-- HEADER -->
    <header class="glass-effect sticky top-0 z-50 border-b border-purple-100">
        <div class="max-w-7xl mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <h1 class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                        Studio Kadosh
                    </h1>
                    <div class="h-6 w-px bg-purple-200"></div>
                    <span class="text-lg font-semibold text-gray-700 flex items-center">
                        <i class="fas fa-users mr-2 text-purple-600"></i>
                        Clientes
                    </span>
                </div>
                
                <!-- Desktop Navigation -->
                <nav class="hidden lg:flex items-center space-x-6">
                    <a href="/dashboard" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-home mr-2"></i>Dashboard
                    </a>
                    <a href="/agendamentos-por-dia" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-calendar-alt mr-2"></i>Agendamentos
                    </a>
                    <a href="/clients" class="text-purple-600 font-semibold">
                        <i class="fas fa-users mr-2"></i>Clientes
                    </a>
                    <a href="/financeiro" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-dollar-sign mr-2"></i>Financeiro
                    </a>
                    <a href="/balanco" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-balance-scale mr-2"></i>Balan√ßo
                    </a>
                    <a href="/expenses" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-receipt mr-2"></i>Despesas
                    </a>
                    <a href="/logout" class="text-red-600 hover:text-red-700 transition-colors">
                        <i class="fas fa-sign-out-alt mr-2"></i>Sair
                    </a>
                </nav>

                <!-- Mobile Menu Button -->
                <button id="menu-button" class="lg:hidden p-2 rounded-lg hover:bg-purple-100 transition-colors">
                    <i class="fas fa-bars text-purple-600"></i>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden lg:hidden mt-4 space-y-2">
                <a href="/dashboard" class="flex items-center space-x-3 p-3 rounded-lg bg-gradient-to-r from-gray-600 to-gray-700 text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-home"></i>
                    <span>üè† Dashboard</span>
                </a>
                <a href="/agendamentos-por-dia" class="flex items-center space-x-3 p-3 rounded-lg gradient-blue text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-calendar-alt"></i>
                    <span>üìÖ Agendamentos</span>
                </a>
                <a href="/clients" class="flex items-center space-x-3 p-3 rounded-lg gradient-purple text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-users"></i>
                    <span>üë• Clientes</span>
                </a>
                <a href="/financeiro" class="flex items-center space-x-3 p-3 rounded-lg gradient-green text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-dollar-sign"></i>
                    <span>üíµ Financeiro</span>
                </a>
                <a href="/balanco" class="flex items-center space-x-3 p-3 rounded-lg gradient-yellow text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-balance-scale"></i>
                    <span>‚öñÔ∏è Balan√ßo</span>
                </a>
                <a href="/expenses" class="flex items-center space-x-3 p-3 rounded-lg bg-gradient-to-r from-pink-500 to-rose-500 text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-receipt"></i>
                    <span>üí∏ Despesas</span>
                </a>
                <a href="/logout" class="flex items-center space-x-3 p-3 rounded-lg gradient-red text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>‚¨ÖÔ∏è Sair</span>
                </a>
            </div>
        </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Error Message -->
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl animate-fade-in">
            <div class="flex items-center">
                <i class="fas fa-exclamation-triangle text-red-600 mr-3"></i>
                <span class="text-red-800 font-medium"><%= error %></span>
            </div>
        </div>
        <% } %>

        <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
            <!-- Left Column - Forms -->
            <div class="xl:col-span-2 space-y-8">
                <!-- Cadastrar Cliente -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="gradient-green p-6">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-user-plus mr-3"></i>
                            Cadastrar Novo Cliente
                        </h2>
                    </div>
                    <div class="p-6">
                        <form action="/client" method="POST" class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Nome Completo</label>
                                <input type="text" name="name" placeholder="Digite o nome do cliente" required
                                       class="w-full p-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Telefone</label>
                                <input type="text" name="phone" placeholder="(11) 99999-9999" required
                                       class="w-full p-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all">
                            </div>
                            <button type="submit" class="w-full gradient-green text-white py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity">
                                <i class="fas fa-plus mr-2"></i>
                                Cadastrar Cliente
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Buscar Cliente -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="gradient-blue p-6">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-search mr-3"></i>
                            Buscar Cliente
                        </h2>
                    </div>
                    <div class="p-6">
                        <form action="/search" method="GET" class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Nome ou Telefone</label>
                                <input type="text" name="q" placeholder="Digite para buscar..." required
                                       value="<%= typeof query !== 'undefined' ? query : '' %>"
                                       class="w-full p-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all">
                            </div>
                            <button type="submit" class="w-full gradient-blue text-white py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity">
                                <i class="fas fa-search mr-2"></i>
                                Buscar Cliente
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Lista de Clientes -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="gradient-purple p-6">
                        <div class="flex items-center justify-between">
                            <h2 class="text-xl font-bold text-white flex items-center">
                                <i class="fas fa-users mr-3"></i>
                                <% if (typeof query !== 'undefined' && query) { %>
                                    Resultados da Busca
                                <% } else { %>
                                    Lista de Clientes
                                <% } %>
                            </h2>
                            <% if (clients && clients.length > 0) { %>
                            <span class="bg-white bg-opacity-20 text-white px-3 py-1 rounded-full text-sm font-semibold">
                                <%= clients.length %> cliente<%= clients.length !== 1 ? 's' : '' %>
                            </span>
                            <% } %>
                        </div>
                    </div>
                    <div class="p-6">
                        <% if (typeof query !== 'undefined' && query) { %>
                        <div class="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
                            <div class="flex items-center justify-between">
                                <span class="text-blue-800">
                                    <i class="fas fa-search mr-2"></i>
                                    Buscando por: "<strong><%= query %></strong>"
                                </span>
                                <a href="/clients" class="text-blue-600 hover:text-blue-700 text-sm font-medium">
                                    <i class="fas fa-times mr-1"></i>
                                    Limpar busca
                                </a>
                            </div>
                        </div>
                        <% } %>

                        <% if (!clients || clients.length === 0) { %>
                        <div class="text-center py-12">
                            <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-users text-4xl text-gray-400"></i>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">
                                <% if (typeof query !== 'undefined' && query) { %>
                                    Nenhum cliente encontrado
                                <% } else { %>
                                    Nenhum cliente cadastrado
                                <% } %>
                            </h3>
                            <p class="text-gray-600 mb-4">
                                <% if (typeof query !== 'undefined' && query) { %>
                                    Tente buscar com outros termos ou cadastre um novo cliente.
                                <% } else { %>
                                    Comece cadastrando seu primeiro cliente usando o formul√°rio acima.
                                <% } %>
                            </p>
                            <% if (typeof query !== 'undefined' && query) { %>
                            <a href="/clients" class="inline-flex items-center px-4 py-2 bg-purple-100 text-purple-700 rounded-lg hover:bg-purple-200 transition-colors">
                                <i class="fas fa-list mr-2"></i>
                                Ver todos os clientes
                            </a>
                            <% } %>
                        </div>
                        <% } else { %>
                        <div class="space-y-3">
                            <% clients.forEach(function(client) { %>
                            <div class="client-card bg-gradient-to-r from-gray-50 to-purple-50 p-4 rounded-xl border border-purple-100">
                                <div class="flex items-center justify-between">
                                    <a href="/client/<%= client._id %>" class="flex-1 group">
                                        <div class="flex items-center space-x-4">
                                            <div class="w-12 h-12 gradient-purple rounded-full flex items-center justify-center group-hover:scale-110 transition-transform">
                                                <i class="fas fa-user text-white"></i>
                                            </div>
                                            <div class="flex-1">
                                                <h3 class="font-semibold text-gray-900 group-hover:text-purple-600 transition-colors">
                                                    <% if (typeof query !== 'undefined' && query) { %>
                                                        <%- client.name.replace(new RegExp(query, 'gi'), '<span class="search-highlight">$&</span>') %>
                                                    <% } else { %>
                                                        <%= client.name %>
                                                    <% } %>
                                                </h3>
                                                <p class="text-gray-600 flex items-center">
                                                    <i class="fas fa-phone mr-2 text-purple-500"></i>
                                                    <% if (typeof query !== 'undefined' && query) { %>
                                                        <%- client.phone.replace(new RegExp(query, 'gi'), '<span class="search-highlight">$&</span>') %>
                                                    <% } else { %>
                                                        <%= client.phone %>
                                                    <% } %>
                                                </p>
                                            </div>
                                            <div class="text-purple-600 group-hover:translate-x-1 transition-transform">
                                                <i class="fas fa-chevron-right"></i>
                                            </div>
                                        </div>
                                    </a>
                                    <form action="/client/<%= client._id %>/delete" method="POST" 
                                          onsubmit="return confirm('‚ö†Ô∏è Tem certeza que deseja excluir o cliente <%= client.name %>?\n\nEsta a√ß√£o n√£o pode ser desfeita!')" 
                                          class="ml-4">
                                        <button type="submit" class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors group">
                                            <i class="fas fa-trash group-hover:scale-110 transition-transform"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Right Column - Stats & Quick Actions -->
            <div class="space-y-6">
                <!-- Estat√≠sticas -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="gradient-bg p-6">
                        <h3 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-chart-bar mr-3"></i>
                            Estat√≠sticas
                        </h3>
                    </div>
                    <div class="p-6 space-y-4">
                        <div class="bg-gradient-to-r from-purple-50 to-pink-50 p-4 rounded-xl border border-purple-200">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 gradient-purple rounded-full flex items-center justify-center">
                                        <i class="fas fa-users text-white"></i>
                                    </div>
                                    <span class="font-medium text-purple-800">Total de Clientes</span>
                                </div>
                                <span class="text-2xl font-bold text-purple-600">
                                    <%= clients ? clients.length : 0 %>
                                </span>
                            </div>
                        </div>

                        <% if (typeof query !== 'undefined' && query) { %>
                        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-4 rounded-xl border border-blue-200">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 gradient-blue rounded-full flex items-center justify-center">
                                        <i class="fas fa-search text-white"></i>
                                    </div>
                                    <span class="font-medium text-blue-800">Resultados</span>
                                </div>
                                <span class="text-2xl font-bold text-blue-600">
                                    <%= clients ? clients.length : 0 %>
                                </span>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>

                <!-- A√ß√µes R√°pidas -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="bg-gradient-to-r from-gray-700 to-gray-800 p-6">
                        <h3 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-bolt mr-3"></i>
                            A√ß√µes R√°pidas
                        </h3>
                    </div>
                    <div class="p-6 space-y-3">
                        <button onclick="scrollToElement('form[action=\'/client\']')" 
                                class="w-full gradient-green text-white py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity">
                            <i class="fas fa-user-plus mr-2"></i>
                            Cadastrar Cliente
                        </button>
                        <button onclick="scrollToElement('form[action=\'/search\']')" 
                                class="w-full bg-blue-100 text-blue-700 py-3 rounded-lg font-semibold hover:bg-blue-200 transition-colors">
                            <i class="fas fa-search mr-2"></i>
                            Buscar Cliente
                        </button>
                        <a href="/agendamentos-por-dia" 
                           class="block w-full bg-purple-100 text-purple-700 py-3 rounded-lg font-semibold hover:bg-purple-200 transition-colors text-center">
                            <i class="fas fa-calendar-alt mr-2"></i>
                            Ver Agendamentos
                        </a>
                        <a href="/dashboard" 
                           class="block w-full bg-gray-100 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-200 transition-colors text-center">
                            <i class="fas fa-home mr-2"></i>
                            Ir para Dashboard
                        </a>
                    </div>
                </div>

                <!-- Dicas -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
                    <div class="bg-gradient-to-r from-yellow-500 to-orange-500 p-6">
                        <h3 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-lightbulb mr-3"></i>
                            Dicas
                        </h3>
                    </div>
                    <div class="p-6">
                        <div class="space-y-4 text-sm text-gray-600">
                            <div class="flex items-start space-x-3">
                                <i class="fas fa-check-circle text-green-500 mt-0.5"></i>
                                <p>Clique no nome do cliente para ver detalhes completos e hist√≥rico.</p>
                            </div>
                            <div class="flex items-start space-x-3">
                                <i class="fas fa-check-circle text-green-500 mt-0.5"></i>
                                <p>Use a busca para encontrar clientes rapidamente por nome ou telefone.</p>
                            </div>
                            <div class="flex items-start space-x-3">
                                <i class="fas fa-check-circle text-green-500 mt-0.5"></i>
                                <p>O bot√£o vermelho permite excluir clientes (cuidado: a√ß√£o irrevers√≠vel!).</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Mobile menu toggle
        const menuButton = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (menuButton && mobileMenu) {
            menuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }

        // Fun√ß√£o para scroll suave
        function scrollToElement(selector) {
            const element = document.querySelector(selector);
            if (element) {
                element.scrollIntoView({behavior: 'smooth'});
            }
        }

        // Auto-focus no primeiro campo quando a p√°gina carrega
        document.addEventListener('DOMContentLoaded', function() {
            const firstInput = document.querySelector('input[name="name"]');
            if (firstInput) {
                firstInput.focus();
            }

            // Adiciona efeito de fade-in aos elementos
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.animate-fade-in').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
        });

        // M√°scara para telefone (opcional)
        const phoneInput = document.querySelector('input[name="phone"]');
        if (phoneInput) {
            phoneInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length >= 11) {
                    value = value.replace(/(\d{2})(\d{5})(\d{4})/, '($1) $2-$3');
                } else if (value.length >= 7) {
                    value = value.replace(/(\d{2})(\d{4})(\d{0,4})/, '($1) $2-$3');
                } else if (value.length >= 3) {
                    value = value.replace(/(\d{2})(\d{0,5})/, '($1) $2');
                }
                e.target.value = value;
            });
        }
    </script>
</body>
</html>