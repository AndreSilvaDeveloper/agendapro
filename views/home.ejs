                        <div class="h-full flex flex-col items-center justify-center text-gray-400 py-12">
                            <i class="fas fa-users-slash text-3xl mb-2 opacity-50"></i>
                            <p class="text-sm">Nenhum cliente encontrado.</p>
                        </div>
                    <% } else { %>
                        <% clients.forEach(function(client) { %>
                            <div class="client-card bg-white p-3 rounded border border-gray-200 flex justify-between items-center group">
                                <div class="flex items-center gap-3 overflow-hidden">
                                    <div class="w-8 h-8 bg-gold-light rounded-full flex items-center justify-center flex-shrink-0 text-gold">
                                        <i class="fas fa-user text-xs"></i>
                                    </div>
                                    <div class="min-w-0">
