<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Clientes</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-4 sm:p-6">
  <div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-lg">
    <!-- Cabeçalho com hambúrguer -->
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-xl font-bold">📋 Clientes</h1>
      <button id="menuBtn" class="sm:hidden bg-gray-200 p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
        ☰
      </button>
      <!-- Links para desktop -->
      <div class="hidden sm:flex space-x-2">
        <a href="/agendamentos-por-dia" class="inline-flex items-center gap-1 bg-blue-600 text-white px-3 py-2 rounded hover:bg-blue-700 transition">
          📅 Agendamentos
        </a>
        <a href="/financeiro" class="inline-flex items-center gap-1 bg-yellow-500 text-white px-3 py-2 rounded hover:bg-yellow-600 transition">
          📊 Financeiro
        </a>
        <a href="/dashboard" class="inline-flex items-center gap-2 bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">
  📊 Dashboard
</a>

      </div>
    </div>

    <!-- Menu oculto em mobile -->
    <div id="mobileMenu" class="hidden flex-col space-y-2 mb-6">
      <a href="/agendamentos-por-dia" class="block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
        📅 Agendamentos por dia
      </a>
      <a href="/financeiro" class="block bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition">
        📊 Financeiro
      </a>
    </div>

    <!-- Erro de duplicata -->
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
        <%= error %>
      </div>
    <% } %>

    <!-- Formulário de cadastro -->
    <h2 class="text-lg font-semibold mb-3">Cadastrar Cliente</h2>
    <form action="/client" method="POST" class="space-y-3 mb-6">
      <input type="text" name="name" placeholder="Nome" required
             class="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
      <input type="text" name="phone" placeholder="Telefone" required
             class="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
      <button type="submit"
              class="w-full bg-green-600 text-white py-3 rounded hover:bg-green-700 transition">
        Cadastrar
      </button>
    </form>

    <!-- Busca de clientes -->
    <h2 class="text-lg font-semibold mb-3">Buscar Cliente</h2>
    <form action="/search" method="GET" class="flex flex-col sm:flex-row sm:space-x-2 mb-6">
      <input type="text" name="q" placeholder="Nome ou telefone" required
             class="flex-1 p-3 mb-2 sm:mb-0 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
      <button type="submit"
              class="bg-blue-600 text-white py-3 rounded hover:bg-blue-700 transition">
        Buscar
      </button>
    </form>

    <!-- Lista de clientes -->
    <h2 class="text-lg font-semibold mb-3">Clientes</h2>
    <% if (clients.length === 0) { %>
      <p class="text-gray-500">Nenhum cliente cadastrado.</p>
    <% } else { %>
      <ul class="space-y-2">
        <% clients.forEach(c => { %>
          <li class="flex justify-between items-center p-3 bg-gray-50 rounded hover:bg-gray-100 transition">
            <a href="/client/<%= c._id %>" class="text-blue-600 hover:underline">
              <%= c.name %> – <%= c.phone %>
            </a>
            <form action="/client/<%= c._id %>/delete" method="POST"
                  onsubmit="return confirm('Excluir este cliente?')">
              <button class="text-red-600 hover:underline text-sm transition">🗑️</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <script>
    // Toggle do menu mobile
    const btn = document.getElementById('menuBtn');
    const menu = document.getElementById('mobileMenu');
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</body>
</html>
