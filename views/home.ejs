                                <input type="text" name="phone" placeholder="(11) 99999-9999" required
                                       class="w-full p-2 text-sm border border-gray-300 bg-gray-50 rounded-lg focus:ring-1 focus:ring-gold transition-all">
                            </div>
                            <button type="submit" class="w-full btn-gold py-2 rounded-lg font-semibold text-sm transition-opacity">
                                <i class="fas fa-plus mr-1"></i> Cadastrar
                            </button>
                        </form>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-xl border border-gray-200 overflow-hidden shrink-0">
                    <div class="p-3 border-b border-gray-200 bg-gray-50">
                        <h2 class="text-sm font-bold text-gray-800 flex items-center">
                            <i class="fas fa-search mr-2 text-gold"></i>Buscar
                        </h2>
                    </div>
                    <div class="p-4">
                        <form action="/search" method="GET" class="space-y-3">
                            <div>
                                <input type="text" name="q" placeholder="Nome ou telefone..." required
                                       value="<%= typeof query !== 'undefined' ? query : '' %>"
                                       class="w-full p-2 text-sm border border-gray-300 bg-gray-50 rounded-lg focus:ring-1 focus:ring-gold transition-all">
                            </div>
                            <button type="submit" class="w-full bg-gray-100 text-gray-700 border border-gray-300 py-2 rounded-lg font-semibold text-sm hover:bg-gray-200 transition-colors">
                                <i class="fas fa-search mr-1"></i> Pesquisar
                            </button>
