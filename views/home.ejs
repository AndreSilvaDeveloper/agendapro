                                            <a href="/client/<%= client.id %>" class="hover:text-gold transition-colors">
                                                <% if (q) { %>
                                                    <%- String(client.name || '').replace(new RegExp(qEsc, 'gi'), '<span class="search-highlight">$&</span>') %>
                                                <% } else { %>
                                                    <%= client.name %>
                                                <% } %>
                                            </a>
                                        </h3>
                                        <p class="text-xs text-gray-500 flex items-center truncate">
                                            <i class="fas fa-phone mr-1 text-[10px]"></i>
                                            <% if (q) { %>
                                                <%- String(client.phone || '').replace(new RegExp(qEsc, 'gi'), '<span class="search-highlight">$&</span>') %>
                                            <% } else { %>
                                                <%= client.phone %>
                                            <% } %>
                                        </p>
                                    </div>
                                </div>
                                
                                <div class="flex items-center gap-2 ml-2">
                                    <a href="/client/<%= client.id %>" class="p-1.5 text-gray-400 hover:text-gold hover:bg-gray-100 rounded transition-colors" title="Ver Detalhes">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form action="/client/<%= client.id %>/delete" method="POST" onsubmit="return confirm('⚠️ Excluir <%= client.name %>?')" style="margin:0;">
