<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Despesas – Studio Kadosh</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- HEADER / NAV -->
  <header class="bg-white shadow-md">
    <div class="max-w-4xl mx-auto px-4 py-3 flex items-center justify-between">
      <a href="/dashboard" class="text-xl font-bold text-purple-700">Studio Kadosh</a>

      <!-- desktop -->
      <nav class="hidden md:flex space-x-4">
        <a href="/dashboard"            class="text-gray-700 hover:text-gray-900">Dashboard</a>
        <a href="/agendamentos-por-dia" class="text-gray-700 hover:text-gray-900">Agendamentos</a>
        <a href="/clients"              class="text-gray-700 hover:text-gray-900">Clientes</a>
        <a href="/financeiro"           class="text-gray-700 hover:text-gray-900">Financeiro</a>
        <a href="/logout"               class="text-red-600   hover:text-red-800">Sair</a>
      </nav>

      <!-- botão mobile -->
      <button id="menu-button" aria-label="Abrir menu"
              class="md:hidden p-2 rounded hover:bg-gray-200 focus:outline-none">
        <span id="bar1" class="block w-6 h-0.5 bg-gray-800 mb-1 transition-transform"></span>
        <span id="bar2" class="block w-6 h-0.5 bg-gray-800 mb-1 transition-opacity"></span>
        <span id="bar3" class="block w-6 h-0.5 bg-gray-800 transition-transform"></span>
      </button>
    </div>
    <!-- menu mobile -->
    <nav id="menu" class="hidden flex-col space-y-2 mb-6 px-4">
  <a href="/dashboard" class="block bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 transition">
        🏠 Dashboard
      </a>
      <a href="/agendamentos-por-dia" class="block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
        📅 Agendamentos por dia
      </a>
      <a href="/clients" class="block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
        👩🏾 Clientes
      </a>
      <a href="/balanco" class="block bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition">
        ⚖️ Balanço Geral
      </a>
      <a href="/financeiro" class="block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
        💵 Financeiro
      </a>
      <a href="/logout" class="block bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
        ⬅️ Sair
      </a>
    </nav>

    <script>
      const btn = document.getElementById('menu-button');
      const menu = document.getElementById('menu');
      const b1 = document.getElementById('bar1');
      const b2 = document.getElementById('bar2');
      const b3 = document.getElementById('bar3');
      btn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
        b1.classList.toggle('rotate-45');
        b3.classList.toggle('-rotate-45');
        b2.classList.toggle('opacity-0');
      });
    </script>
  </header>

  <main class="flex-grow max-w-3xl mx-auto p-4 space-y-6">

    <!-- Registrar Despesa -->
    <section class="bg-white p-6 rounded shadow">
      <h1 class="text-2xl font-semibold mb-4">Registrar Despesa</h1>
      <form action="/expenses" method="POST" class="space-y-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium">Data</label>
            <input type="date" name="date" required
                   class="w-full p-2 border rounded focus:ring-blue-400" />
          </div>
          <div>
            <label class="block text-sm font-medium">Categoria</label>
            <select name="category" required
                    class="w-full p-2 border rounded focus:ring-blue-400">
              <option value="">Selecione...</option>
              <option>Luz</option>
              <option>Água</option>
              <option>Aluguel</option>
              <option>Produtos</option>
              <option>Comissão Calcinhas</option>
              <option>Comissão Joias</option>
              <option>Outros Gastos</option>
            </select>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium">Descrição (opcional)</label>
          <input type="text" name="description" placeholder="Ex: Conta de junho"
                 class="w-full p-2 border rounded focus:ring-blue-400" />
        </div>
        <div>
          <label class="block text-sm font-medium">Valor (R$)</label>
          <input type="number" name="amount" step="0.01" min="0" required
                 class="w-full p-2 border rounded focus:ring-blue-400" />
        </div>
        <button type="submit"
                class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
          Adicionar
        </button>
      </form>
    </section>

    <!-- Lista de Despesas -->
    <section class="bg-white p-6 rounded shadow">
      <h2 class="text-2xl font-semibold mb-4">Lista de Despesas</h2>
      <% if (expenses.length === 0) { %>
        <p class="text-gray-500">Nenhuma despesa registrada.</p>
      <% } else { %>
        <ul class="space-y-3">
          <% expenses.forEach(e => { %>
            <li class="flex justify-between items-start border-b pb-2">
              <div>
                <span class="block font-medium">
                  <%= e.category %> – 
                  <%= dayjs(e.date).tz('America/Sao_Paulo').format('DD/MM/YYYY') %>
                </span>
                <% if (e.description) { %>
                  <span class="text-sm text-gray-600"><%= e.description %></span>
                <% } %>
              </div>
              <div class="flex items-center space-x-4">
                <span class="text-red-600 font-semibold">
                  R$ <%= e.amount.toFixed(2) %>
                </span>
                <form action="/expenses/<%= e._id %>/delete" method="POST"
                      onsubmit="return confirm('Excluir esta despesa?')">
                  <button class="text-gray-400 hover:text-gray-600">🗑️</button>
                </form>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </section>

  </main>

</body>
</html>
