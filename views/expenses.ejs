<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Despesas ‚Äì Studio Kadosh</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .gradient-purple {
            background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
        }
        .gradient-blue {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        }
        .gradient-green {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }
        .gradient-yellow {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        }
        .gradient-red {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }
        .gradient-pink {
            background: linear-gradient(135deg, #ec4899 0%, #be185d 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .expense-card {
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
        }
        .expense-card:hover {
            border-left-color: #ef4444;
            background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
        }
        .form-input {
            transition: all 0.3s ease;
        }
        .form-input:focus {
            transform: translateY(-1px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50">
    <!-- HEADER -->
    <header class="glass-effect sticky top-0 z-50 border-b border-purple-100">
        <div class="max-w-7xl mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <h1 class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                        Studio Kadosh
                    </h1>
                    <div class="h-6 w-px bg-purple-200"></div>
                    <span class="text-lg font-semibold text-gray-700 flex items-center">
                        <i class="fas fa-receipt mr-2 text-purple-600"></i>
                        Despesas
                    </span>
                </div>
                
                <!-- Desktop Navigation -->
                <nav class="hidden lg:flex items-center space-x-6">
                    <a href="/dashboard" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-home mr-2"></i>Dashboard
                    </a>
                    <a href="/agendamentos-por-dia" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-calendar-alt mr-2"></i>Agendamentos
                    </a>
                    <a href="/clients" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-users mr-2"></i>Clientes
                    </a>
                    <a href="/financeiro" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-dollar-sign mr-2"></i>Financeiro
                    </a>
                    <a href="/balanco" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-balance-scale mr-2"></i>Balan√ßo
                    </a>
                    <a href="/expenses" class="text-purple-600 font-semibold">
                        <i class="fas fa-receipt mr-2"></i>Despesas
                    </a>
                    <a href="/logout" class="text-red-600 hover:text-red-700 transition-colors">
                        <i class="fas fa-sign-out-alt mr-2"></i>Sair
                    </a>
                </nav>

                <!-- Mobile Menu Button -->
                <button id="menu-button" class="lg:hidden p-2 rounded-lg hover:bg-purple-100 transition-colors">
                    <i class="fas fa-bars text-purple-600"></i>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden lg:hidden mt-4 space-y-2">
                <a href="/dashboard" class="flex items-center space-x-3 p-3 rounded-lg bg-gradient-to-r from-gray-600 to-gray-700 text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-home"></i>
                    <span>üè† Dashboard</span>
                </a>
                <a href="/agendamentos-por-dia" class="flex items-center space-x-3 p-3 rounded-lg gradient-blue text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-calendar-alt"></i>
                    <span>üìÖ Agendamentos</span>
                </a>
                <a href="/clients" class="flex items-center space-x-3 p-3 rounded-lg gradient-purple text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-users"></i>
                    <span>üë• Clientes</span>
                </a>
                <a href="/financeiro" class="flex items-center space-x-3 p-3 rounded-lg gradient-green text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-dollar-sign"></i>
                    <span>üíµ Financeiro</span>
                </a>
                <a href="/balanco" class="flex items-center space-x-3 p-3 rounded-lg gradient-yellow text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-balance-scale"></i>
                    <span>‚öñÔ∏è Balan√ßo</span>
                </a>
                <a href="/expenses" class="flex items-center space-x-3 p-3 rounded-lg bg-gradient-to-r from-pink-500 to-rose-500 text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-receipt"></i>
                    <span>üí∏ Despesas</span>
                </a>
                <a href="/logout" class="flex items-center space-x-3 p-3 rounded-lg gradient-red text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>‚¨ÖÔ∏è Sair</span>
                </a>
            </div>
        </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 py-8 space-y-8">
        <!-- Registrar Nova Despesa -->
        <section class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
            <div class="gradient-pink p-6">
                <h2 class="text-xl font-bold text-white flex items-center">
                    <i class="fas fa-plus-circle mr-3"></i>
                    Registrar Nova Despesa
                </h2>
            </div>
            <div class="p-6">
                <form action="/expenses" method="POST" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Data -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-calendar mr-2 text-pink-600"></i>
                                Data da Despesa
                            </label>
                            <input type="date" 
                                   name="date" 
                                   required
                                   class="form-input w-full p-3 border border-pink-200 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all">
                        </div>

                        <!-- Categoria -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-tag mr-2 text-pink-600"></i>
                                Categoria
                            </label>
                            <select name="category" 
                                    required
                                    class="form-input w-full p-3 border border-pink-200 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all">
                                <option value="">Selecione uma categoria...</option>
                                <option value="Luz">üí° Luz</option>
                                <option value="√Ågua">üíß √Ågua</option>
                                <option value="Aluguel">üè† Aluguel</option>
                                <option value="Produtos">üì¶ Produtos</option>
                                <option value="Comiss√£o Calcinhas">üëô Comiss√£o Calcinhas</option>
                                <option value="Comiss√£o Joias">üíé Comiss√£o Joias</option>
                                <option value="Outros Gastos">üîß Outros Gastos</option>
                            </select>
                        </div>
                    </div>

                    <!-- Descri√ß√£o -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-edit mr-2 text-pink-600"></i>
                            Descri√ß√£o (opcional)
                        </label>
                        <input type="text" 
                               name="description" 
                               placeholder="Ex: Conta de energia el√©trica de dezembro"
                               class="form-input w-full p-3 border border-pink-200 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all">
                    </div>

                    <!-- Valor -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-dollar-sign mr-2 text-pink-600"></i>
                            Valor (R$)
                        </label>
                        <input type="number" 
                               name="amount" 
                               step="0.01" 
                               min="0" 
                               required
                               placeholder="0,00"
                               class="form-input w-full p-3 border border-pink-200 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all">
                    </div>

                    <!-- Bot√£o -->
                    <div class="flex justify-end">
                        <button type="submit" class="gradient-pink text-white px-8 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity flex items-center">
                            <i class="fas fa-plus mr-2"></i>
                            Registrar Despesa
                        </button>
                    </div>
                </form>
            </div>
        </section>

        <!-- Lista de Despesas -->
        <section class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
            <div class="gradient-red p-6">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold text-white flex items-center">
                        <i class="fas fa-list mr-3"></i>
                        Lista de Despesas
                    </h2>
                    <% if (expenses && expenses.length > 0) { %>
                    <span class="bg-white bg-opacity-20 text-white px-3 py-1 rounded-full text-sm font-semibold">
                        <%= expenses.length %> despesa<%= expenses.length !== 1 ? 's' : '' %>
                    </span>
                    <% } %>
                </div>
            </div>
            <div class="p-6">
                <% if (!expenses || expenses.length === 0) { %>
                <div class="text-center py-12">
                    <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-receipt text-4xl text-gray-400"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">Nenhuma despesa registrada</h3>
                    <p class="text-gray-600 mb-6">Comece registrando sua primeira despesa usando o formul√°rio acima.</p>
                    <button onclick="document.querySelector('input[name=date]').focus()" class="gradient-pink text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity">
                        <i class="fas fa-plus mr-2"></i>
                        Registrar Primeira Despesa
                    </button>
                </div>
                <% } else { %>
                <div class="space-y-4">
                    <% expenses.forEach((e, index) => { %>
                    <div class="expense-card bg-gradient-to-r from-gray-50 to-red-50 p-6 rounded-xl border border-gray-200">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <div class="flex items-center space-x-4 mb-3">
                                    <div class="w-12 h-12 gradient-red rounded-full flex items-center justify-center">
                                        <i class="fas fa-receipt text-white"></i>
                                    </div>
                                    <div>
                                        <div class="flex items-center space-x-3 mb-1">
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                <i class="fas fa-tag mr-1"></i>
                                                <%= e.category %>
                                            </span>
                                            <span class="text-sm text-gray-500">
                                                <i class="fas fa-calendar mr-1"></i>
                                                <%= dayjs(e.date).tz('America/Sao_Paulo').format('DD/MM/YYYY') %>
                                            </span>
                                        </div>
                                        <% if (e.description) { %>
                                        <p class="text-sm text-gray-600 flex items-center">
                                            <i class="fas fa-comment mr-2 text-gray-400"></i>
                                            <%= e.description %>
                                        </p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="flex items-center space-x-4">
                                <!-- Valor -->
                                <div class="text-right">
                                    <div class="text-2xl font-bold text-red-600">
                                        R$ <%= e.amount.toFixed(2) %>
                                    </div>
                                    <div class="text-xs text-gray-500">
                                        #<%= String(index + 1).padStart(3, '0') %>
                                    </div>
                                </div>
                                
                              <!-- Bot√£o Excluir -->
<form action="/expenses/<%= e._id %>/delete" method="POST" 
      onsubmit="return confirm('Excluir esta despesa?')">
    <button type="submit" class="p-3 text-red-500 hover:bg-red-100 rounded-lg transition-all hover:scale-110">
        <i class="fas fa-trash-alt"></i>
    </button>
</form>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>

                <!-- Resumo Total -->
                <div class="mt-8 pt-6 border-t border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="text-sm text-gray-600">
                            <i class="fas fa-info-circle mr-2"></i>
                            Mostrando <%= expenses.length %> despesa<%= expenses.length !== 1 ? 's' : '' %>
                        </div>
                        <div class="text-lg font-bold text-red-600">
                            Total: R$ <%= expenses.reduce((sum, e) => sum + e.amount, 0).toFixed(2) %>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-12">
        <div class="max-w-7xl mx-auto px-4 py-6">
            <div class="text-center text-gray-600">
                <p class="flex items-center justify-center">
                    <i class="fas fa-crown mr-2 text-purple-600"></i>
                    Studio Kadosh ¬© <%= new Date().getFullYear() %>
                    <i class="fas fa-heart ml-2 text-red-500"></i>
                </p>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        const menuButton = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (menuButton && mobileMenu) {
            menuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }

        // Inicializa√ß√£o das anima√ß√µes
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.animate-fade-in').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });

            // Define data atual como padr√£o
            const dateInput = document.querySelector('input[name="date"]');
            if (dateInput && !dateInput.value) {
                const today = new Date();
                const formattedDate = today.toISOString().split('T')[0];
                dateInput.value = formattedDate;
            }

            // Efeito de sucesso no formul√°rio
            const form = document.querySelector('form[action="/expenses"]');
            if (form) {
                form.addEventListener('submit', function() {
                    const button = this.querySelector('button[type="submit"]');
                    button.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Registrando...';
                    button.disabled = true;
                });
            }
        });
    </script>
</body>
</html>