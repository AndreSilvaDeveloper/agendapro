        <div class="max-w-7xl mx-auto px-4 py-6">
            <div class="text-center text-gray-600">
                <p class="flex items-center justify-center">
                    <i class="fas fa-crown mr-2 text-gold"></i>
                    Studio Kadosh © <%= new Date().getFullYear() %>
                    <i class="fas fa-heart ml-2 text-red-500"></i>
                </p>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        const menuButton = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (menuButton && mobileMenu) {
            menuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }

        // Dados dos charts
        const ds = document.getElementById('balanco-data').dataset;
        const receita = parseFloat(ds.receita);
        const despesa = parseFloat(ds.despesa);
        const produtos = JSON.parse(ds.produtos);
        const svcCount = parseInt(ds.svcCount, 10);
        const prdCount = parseInt(ds.prdCount, 10);

        // Configuração padrão dos charts
        Chart.defaults.font.family = 'Inter, system-ui, sans-serif';
        Chart.defaults.color = '#374151'; // Cor do texto padrão (cinza escuro)

        // 1) Receita vs Despesa
        if (receita > 0 || despesa > 0) {
            new Chart(document.getElementById('chartRevDesp').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Receitas', 'Despesas'],
                    datasets: [{
                        data: [receita, despesa],
                        backgroundColor: ['#10b981', '#ef4444'], // Verde e Vermelho mantidos
                        borderWidth: 0,
                        hoverOffset: 10
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true,
                                font: {
                                    size: 12,
                                    weight: '500'
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                    return `${label}: R$ ${value.toFixed(2)} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }

        // 2) Vendas por Produto
        if (produtos && produtos.length > 0) {
            const prodLabels = produtos.map(p => p.name);
            const prodData = produtos.map(p => p.total);
            // Usando uma paleta consistente com o tema, mas variada
            const colors = [ 
                '#B8860B', '#DAA520', '#FFD700', // Tons de Dourado
                '#6b7280', '#9ca3af', '#d1d5db', // Tons de Cinza
                '#a78bfa', '#c4b5fd'            // Tons de Roxo suave
            ];

            new Chart(document.getElementById('chartProd').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: prodLabels,
                    datasets: [{
                        data: prodData,
                        backgroundColor: colors.slice(0, prodData.length), // Usa a paleta definida
                        borderWidth: 0,
                        hoverOffset: 10
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true,
                                font: {
                                    size: 11, // Um pouco menor para caber mais
                                    weight: '500'
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed;
                                    return `${label}: R$ ${value.toFixed(2)}`;
                                }
                            }
                        }
                    }
                }
            });
        }

        // 3) Qtd. Serviços vs Produtos
        if (svcCount > 0 || prdCount > 0) {
             // Usando verde para serviços e azul para produtos (consistente com os cards de resumo)
            new Chart(document.getElementById('chartCount').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Serviços', 'Produtos'],
                    datasets: [{
                        data: [svcCount, prdCount],
                        backgroundColor: ['#10b981', '#3b82f6'], // Verde e Azul
                        borderWidth: 0,
                        hoverOffset: 10
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        datalabels: {
                            color: '#fff',
                            formatter: (value) => value,
                            font: {
                                weight: 'bold',
                                size: 16
                            }
                        },
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true,
                                font: {
                                    size: 12,
                                    weight: '500'
                                }
                            }
                        }
                    }
                },
                plugins: [ChartDataLabels] // Registrar o plugin
            });
        }

        // Inicialização das animações
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.animate-fade-in').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
        });
    </script>
</body>
