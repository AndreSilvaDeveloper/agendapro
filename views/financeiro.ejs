                                <input type="date" name="day" value="<%= dayValue %>" class="filter-input w-full p-2 text-sm rounded-lg border border-gray-300">
                            </div>
                            <div>
                                <label class="block text-xs font-medium text-gray-500 mb-1">Mês</label>
                                <input type="month" name="month" value="<%= monthValue %>" class="filter-input w-full p-2 text-sm rounded-lg border border-gray-300">
                            </div>
                            <div>
                                <label class="block text-xs font-medium text-gray-500 mb-1">Semana</label>
                                <input type="week" name="week" value="<%= weekValue %>" class="filter-input w-full p-2 text-sm rounded-lg border border-gray-300">
