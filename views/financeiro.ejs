<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Financeiro – <%= label %> – Studio Kadosh</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .gradient-purple {
            background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
        }
        .gradient-blue {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        }
        .gradient-green {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }
        .gradient-yellow {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        }
        .gradient-red {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }
        .gradient-indigo {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .payment-card {
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
        }
        .payment-card:hover {
            border-left-color: #10b981;
            background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
        }
        .filter-input {
            transition: all 0.3s ease;
        }
        .filter-input:focus {
            transform: translateY(-1px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .metric-card {
            background: linear-gradient(135deg, rgba(255,255,255,0.9) 0%, rgba(248,250,252,0.9) 100%);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
        }
        .pix-gradient {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }
        .cash-gradient {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        }
        .card-gradient {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50">
    <!-- HEADER -->
    <header class="glass-effect sticky top-0 z-50 border-b border-purple-100">
        <div class="max-w-7xl mx-auto px-4 py-4">
            <div class="flex flex-wrap items-center justify-between">
                <div class="flex items-center space-x-4">
                    <h1 class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                        Studio Kadosh
                    </h1>
                    <div class="h-6 w-px bg-purple-200"></div>
                    <span class="text-lg font-semibold text-gray-700 flex items-center">
                        <i class="fas fa-dollar-sign mr-2 text-purple-600"></i>
                        Financeiro – <%= label %>
                    </span>
                </div>
                
                <!-- Desktop Navigation -->
                <nav class="hidden lg:flex items-center space-x-6">
                    <a href="/dashboard" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-home mr-2"></i>Dashboard
                    </a>
                    <a href="/agendamentos-por-dia" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-calendar-alt mr-2"></i>Agendamentos
                    </a>
                    <a href="/clients" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-users mr-2"></i>Clientes
                    </a>
                    <a href="/financeiro" class="text-purple-600 font-semibold">
                        <i class="fas fa-dollar-sign mr-2"></i>Financeiro
                    </a>
                    <a href="/balanco" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-balance-scale mr-2"></i>Balanço
                    </a>
                    <a href="/expenses" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-receipt mr-2"></i>Despesas
                    </a>
                    <a href="/logout" class="text-red-600 hover:text-red-700 transition-colors">
                        <i class="fas fa-sign-out-alt mr-2"></i>Sair
                    </a>
                </nav>

                <!-- Mobile Menu Button -->
                <button id="menu-button" class="lg:hidden p-2 rounded-lg hover:bg-purple-100 transition-colors">
                    <i class="fas fa-bars text-purple-600"></i>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden lg:hidden mt-4 space-y-2">
                <a href="/dashboard" class="flex items-center space-x-3 p-3 rounded-lg bg-gradient-to-r from-gray-600 to-gray-700 text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-home"></i>
                    <span>🏠 Dashboard</span>
                </a>
                <a href="/agendamentos-por-dia" class="flex items-center space-x-3 p-3 rounded-lg gradient-blue text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-calendar-alt"></i>
                    <span>📅 Agendamentos</span>
                </a>
                <a href="/clients" class="flex items-center space-x-3 p-3 rounded-lg gradient-purple text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-users"></i>
                    <span>👥 Clientes</span>
                </a>
                <a href="/financeiro" class="flex items-center space-x-3 p-3 rounded-lg gradient-green text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-dollar-sign"></i>
                    <span>💵 Financeiro</span>
                </a>
                <a href="/balanco" class="flex items-center space-x-3 p-3 rounded-lg gradient-yellow text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-balance-scale"></i>
                    <span>⚖️ Balanço</span>
                </a>
                <a href="/expenses" class="flex items-center space-x-3 p-3 rounded-lg bg-gradient-to-r from-pink-500 to-rose-500 text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-receipt"></i>
                    <span>💸 Despesas</span>
                </a>
                <a href="/logout" class="flex items-center space-x-3 p-3 rounded-lg gradient-red text-white hover:opacity-90 transition-opacity">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>⬅️ Sair</span>
                </a>
            </div>
        </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 py-8 space-y-8">
        <!-- Filtros -->
        <section class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
            <div class="gradient-indigo p-6">
                <h2 class="text-xl font-bold text-white flex items-center">
                    <i class="fas fa-filter mr-3"></i>
                    Filtros de Período
                </h2>
            </div>
            <div class="p-6">
                <form method="GET" action="/financeiro" class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    <!-- Dia -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-calendar-day mr-2 text-indigo-600"></i>
                            Filtrar por Dia
                        </label>
                        <input type="date" 
                               name="day" 
                               value="<%= dayValue %>"
                               class="filter-input w-full p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
                    </div>

                    <!-- Mês -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-calendar-alt mr-2 text-indigo-600"></i>
                            Filtrar por Mês
                        </label>
                        <input type="month" 
                               name="month" 
                               value="<%= monthValue %>"
                               class="filter-input w-full p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
                    </div>

                    <!-- Semana -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-calendar-week mr-2 text-indigo-600"></i>
                            Filtrar por Semana
                        </label>
                        <input type="week" 
                               name="week" 
                               value="<%= weekValue %>"
                               class="filter-input w-full p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
                    </div>

                    <!-- Botão -->
                    <div class="flex items-end">
                        <button type="submit" class="gradient-indigo text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity w-full flex items-center justify-center">
                            <i class="fas fa-search mr-2"></i>
                            Aplicar Filtros
                        </button>
                    </div>
                </form>
            </div>
        </section>

        <!-- Total Geral -->
        <section class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
            <div class="gradient-green p-6">
                <h2 class="text-xl font-bold text-white flex items-center">
                    <i class="fas fa-chart-line mr-3"></i>
                    Resumo Financeiro
                </h2>
            </div>
            <div class="p-6">
                <div class="text-center mb-8">
                    <div class="inline-flex items-center justify-center w-20 h-20 gradient-green rounded-full mb-4">
                        <i class="fas fa-coins text-3xl text-white"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">Total Geral Recebido</h3>
                    <p class="text-4xl font-bold text-green-600">R$ <%= overallTotal.toFixed(2) %></p>
                    <p class="text-sm text-gray-600 mt-2">
                        <i class="fas fa-calendar mr-1"></i>
                        Período: <%= label %>
                    </p>
                </div>

                <!-- Serviços vs Produtos -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Serviços -->
                    <div class="metric-card p-6 rounded-xl border border-blue-200 card-hover">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 gradient-blue rounded-full flex items-center justify-center">
                                <i class="fas fa-tools text-white"></i>
                            </div>
                            <span class="text-sm font-medium text-blue-700 bg-blue-100 px-3 py-1 rounded-full">
                                Serviços
                            </span>
                        </div>
                        <div class="text-3xl font-bold text-blue-800 mb-2">
                            R$ <%= totalServicos.toFixed(2) %>
                        </div>
                        <div class="text-sm text-blue-600 flex items-center">
                            <i class="fas fa-wrench mr-1"></i>
                            Procedimentos realizados
                        </div>
                    </div>

                    <!-- Produtos -->
                    <div class="metric-card p-6 rounded-xl border border-purple-200 card-hover">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 gradient-purple rounded-full flex items-center justify-center">
                                <i class="fas fa-box text-white"></i>
                            </div>
                            <span class="text-sm font-medium text-purple-700 bg-purple-100 px-3 py-1 rounded-full">
                                Produtos
                            </span>
                        </div>
                        <div class="text-3xl font-bold text-purple-800 mb-2">
                            R$ <%= totalProdutos.toFixed(2) %>
                        </div>
                        <div class="text-sm text-purple-600 flex items-center">
                            <i class="fas fa-shopping-bag mr-1"></i>
                            Vendas de produtos
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Formas de Pagamento -->
        <section class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
            <div class="gradient-bg p-6">
                <h2 class="text-xl font-bold text-white flex items-center">
                    <i class="fas fa-credit-card mr-3"></i>
                    Recebimentos por Forma de Pagamento
                </h2>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    <% 
                    const paymentMethods = [
                        { name: 'Pix', icon: 'fas fa-qrcode', gradient: 'pix-gradient', bg: 'bg-green-50', text: 'text-green-800' },
                        { name: 'Dinheiro', icon: 'fas fa-money-bill-wave', gradient: 'cash-gradient', bg: 'bg-yellow-50', text: 'text-yellow-800' },
                        { name: 'Cartão', icon: 'fas fa-credit-card', gradient: 'card-gradient', bg: 'bg-blue-50', text: 'text-blue-800' }
                    ];
                    
                    paymentMethods.forEach(method => {
                        const total = totals[method.name] || 0;
                    %>
                    <div class="metric-card p-6 rounded-xl border border-gray-200 card-hover">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 <%= method.gradient %> rounded-full flex items-center justify-center">
                                <i class="<%= method.icon %> text-white"></i>
                            </div>
                            <span class="text-sm font-medium <%= method.text %> <%= method.bg %> px-3 py-1 rounded-full">
                                <%= method.name %>
                            </span>
                        </div>
                        <div class="text-3xl font-bold <%= method.text %> mb-2">
                            R$ <%= total.toFixed(2) %>
                        </div>
                        <div class="text-sm text-gray-600 flex items-center">
                            <i class="fas fa-chart-bar mr-1"></i>
                            <%= overallTotal > 0 ? Math.round((total / overallTotal) * 100) : 0 %>% do total
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Detalhes por Forma de Pagamento -->
        <% paymentMethods.forEach(method => {
            const list = details[method.name] || [];
        %>
        <section class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover animate-fade-in">
            <div class="<%= method.gradient %> p-6">
                <div class="flex items-center justify-between">
                    <h3 class="text-xl font-bold text-white flex items-center">
                        <i class="<%= method.icon %> mr-3"></i>
                        Detalhes – <%= method.name %>
                    </h3>
                    <% if (list.length > 0) { %>
                    <span class="bg-white bg-opacity-20 text-white px-3 py-1 rounded-full text-sm font-semibold">
                        <%= list.length %> transaç<%= list.length !== 1 ? 'ões' : 'ão' %>
                    </span>
                    <% } %>
                </div>
            </div>
            <div class="p-6">
                <% if (list.length > 0) { %>
                <div class="space-y-4">
                    <% list.forEach((d, index) => { %>
                    <div class="payment-card bg-gradient-to-r from-gray-50 to-green-50 p-6 rounded-xl border border-gray-200">
                        <div class="flex flex-wrap items-center justify-between">
                            <div class="flex-1">
                                <div class="flex items-center space-x-4 mb-3">
                                    <div class="w-12 h-12 <%= method.gradient %> rounded-full flex items-center justify-center">
                                        <i class="<%= method.icon %> text-white"></i>
                                    </div>
                                    <div>
                                        <div class="flex items-center space-x-3 mb-1">
                                            <span class="font-semibold text-gray-900">
                                                <%= d.client %>
                                            </span>
                                            <span class="text-sm text-gray-500">
                                                <i class="fas fa-calendar mr-1"></i>
                                                <%= d.date %>
                                            </span>
                                        </div>
                                        <div class="text-sm text-gray-600 flex items-center">
                                            <i class="fas fa-tag mr-2 text-gray-400"></i>
                                            <%= d.item %>
                                        </div>
                                        <% if (d.description) { %>
                                        <div class="text-sm text-gray-500 flex items-center mt-1">
                                            <i class="fas fa-comment mr-2 text-gray-400"></i>
                                            <%= d.description %>
                                        </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="text-right">
                                <div class="text-2xl font-bold text-green-600">
                                    R$ <%= d.amount %>
                                </div>
                                <div class="text-xs text-gray-500">
                                    #<%= String(index + 1).padStart(3, '0') %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>

                <!-- Resumo da Forma de Pagamento -->
                <div class="mt-6 pt-6 border-t border-gray-200">
                    <div class="flex flex-wrap items-center justify-between">
                        <div class="text-sm text-gray-600">
                            <i class="fas fa-info-circle mr-2"></i>
                            <%= list.length %> transaç<%= list.length !== 1 ? 'ões' : 'ão' %> via <%= method.name %>
                        </div>
                        <div class="text-lg font-bold <%= method.text %>">
                            Subtotal: R$ <%= (totals[method.name] || 0).toFixed(2) %>
                        </div>
                    </div>
                </div>
                <% } else { %>
                <div class="text-center py-12">
                    <div class="w-20 h-20 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="<%= method.icon %> text-3xl text-gray-400"></i>
                    </div>
                    <h4 class="text-lg font-semibold text-gray-900 mb-2">Nenhum pagamento via <%= method.name %></h4>
                    <p class="text-gray-600">Não há transações registradas para este método de pagamento no período selecionado.</p>
                </div>
                <% } %>
            </div>
        </section>
        <% }); %>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-12">
        <div class="max-w-7xl mx-auto px-4 py-6">
            <div class="text-center text-gray-600">
                <p class="flex items-center justify-center">
                    <i class="fas fa-crown mr-2 text-purple-600"></i>
                    Studio Kadosh © <%= new Date().getFullYear() %>
                    <i class="fas fa-heart ml-2 text-red-500"></i>
                </p>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        const menuButton = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (menuButton && mobileMenu) {
            menuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }

        // Inicialização das animações
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.animate-fade-in').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });

            // Limpar filtros
            const clearFilters = () => {
                document.querySelectorAll('input[type="date"], input[type="month"], input[type="week"]').forEach(input => {
                    input.value = '';
                });
            };

            // Adicionar botão de limpar filtros se houver valores
            const hasFilters = document.querySelector('input[value]:not([value=""])');
            if (hasFilters) {
                const filterForm = document.querySelector('form[action="/financeiro"]');
                const clearButton = document.createElement('button');
                clearButton.type = 'button';
                clearButton.className = 'gradient-red text-white px-4 py-2 rounded-lg font-semibold hover:opacity-90 transition-opacity flex items-center';
                clearButton.innerHTML = '<i class="fas fa-times mr-2"></i>Limpar';
                clearButton.onclick = () => {
                    clearFilters();
                    filterForm.submit();
                };
                
                const buttonContainer = filterForm.querySelector('.flex.items-end');
                buttonContainer.appendChild(clearButton);
            }
        });
    </script>
</body>
</html>