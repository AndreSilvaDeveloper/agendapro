                    <% 
                    const paymentMethods = [
                        { name: 'Pix', icon: 'fas fa-qrcode', gradient: 'pix-gradient', text: 'text-green-600' },
                        { name: 'Dinheiro', icon: 'fas fa-money-bill-wave', gradient: 'cash-gradient', text: 'text-yellow-600' },
                        { name: 'Cartão', icon: 'fas fa-credit-card', gradient: 'card-gradient', text: 'text-blue-600' }
                    ];
                    
                    paymentMethods.forEach(method => {
                        const total = totals[method.name.toLowerCase()] || 0;
                    %>
                    <div class="bg-white p-3 rounded-lg shadow-md border border-gray-200 flex items-center justify-between">
                        <div>
                            <span class="text-xs font-bold text-gray-500 uppercase"><%= method.name %></span>
                            <p class="text-lg font-bold <%= method.text %>">R$ <%= money(total) %></p>
