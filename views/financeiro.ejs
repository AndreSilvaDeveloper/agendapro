                            <i class="fas fa-list mr-2 text-gold"></i>
                            Detalhamento das Transações
                        </h2>
                    </div>
                    
                    <div class="compact-body custom-scroll p-3 space-y-4">
                        <% paymentMethods.forEach(method => { 
                            const list = details[method.name.toLowerCase()] || [];
                        %>
                            <% if (list.length > 0) { %>
                            <div>
                                <h3 class="text-xs font-bold text-gray-500 uppercase mb-2 flex items-center">
                                    <i class="<%= method.icon %> mr-1"></i> <%= method.name %>
                                    <span class="ml-2 bg-gray-100 px-2 py-0.5 rounded-full text-[10px]"><%= list.length %></span>
                                </h3>
                                <div class="space-y-2">
                                    <% list.forEach((d) => { %>
                                    <div class="payment-card bg-white p-2 rounded border border-gray-200 flex justify-between items-center group hover:bg-gray-50">
                                        <div class="flex-1 min-w-0 mr-2">
                                            <div class="flex items-center justify-between">
