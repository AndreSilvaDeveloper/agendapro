<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Painel Master - Organizações</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<%- include('../partials/navbar') %> 

<main class="main-content" style="padding-top: 6rem;">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card shadow-sm border-0">
          <div
            class="card-header bg-light d-flex justify-content-between align-items-center"
          >
            <h4 class="mb-0">Painel Master - Organizações</h4>
            
            <% if (locals.originalAdminSession) { %>
              <a href="/master/stop-impersonation" class="btn btn-warning">
                <i class="fas fa-user-secret me-2"></i>
                Parar Personificação (Voltar para SuperAdmin)
              </a>
            <% } %>
          </div>
          <div class="card-body">
            
            <% if (!organizations || organizations.length === 0) { %>
              <p>Nenhuma organização encontrada.</p>
            <% } else { %>
              <div class="table-responsive">
                <table class="table table-hover align-middle">
                  <thead class="table-light">
                    <tr>
                      <th scope="col">ID</th>
                      <th scope="col">Nome da Organização</th>
                      <th scope="col">Dono (Owner)</th>
                      <th scope="col">Email do Dono</th>
                      <th scope="col">Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% organizations.forEach(org => { %>
                      <tr>
                        <th scope="row"><%= org.id %></th>
                        <td><%= org.name %></td>
                        
                        <% if (org.Users && org.Users.length > 0) { %>
                          <td><%= org.Users[0].username %></td>
                          <td><%= org.Users[0].email %></td>
                        <% } else { %>
                          <td class="text-muted"><em>Sem Dono</em></td>
                          <td class="text-muted"><em>N/A</em></td>
                        <% } %>

                        <td>
                          <a 
                            href="/master/impersonate/<%= org.id %>" 
                            class="btn btn-primary btn-sm"
                            title="Logar como esta organização"
                          >
                            <i class="fas fa-sign-in-alt"></i>
                            Logar
                          </a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } %>

          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>