<!DOCTYPE html>
<html lang="pt-BR" class="h-full" data-theme="light">
<head>
    <meta charset="UTF-8">
    <title>Crie sua Conta – <%= (typeof orgName !== 'undefined') ? orgName : 'AgendaPro' %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <script>
        (function() {
            const THEMES = ["light", "medium-dark", "deep-dark"];
            const savedTheme = localStorage.getItem('theme');
            let initialTheme = 'light';

            if (savedTheme && THEMES.includes(savedTheme)) {
                initialTheme = savedTheme;
            } else if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                initialTheme = 'deep-dark';
            }
            document.documentElement.setAttribute('data-theme', initialTheme);
        })();
    </script>

    <style>
        /* ================================================= */
        /* === 1. DEFINIÇÃO DAS CORES PARA TRÊS TEMAS === */
        /* ================================================= */

        /* --- TEMA 1: LIGHT --- */
        :root, [data-theme="light"] {
            --color-gold-light: #FFD700;
            --color-gold-dark: #B8860B;
            --color-gold-accent: #DAA520;
            --color-bg-primary: #f3f4f6;
            --color-bg-secondary: #ffffff;
            --color-bg-muted: #f9fafb;     
            --color-bg-accent-light: #FFFBEB;
            --color-bg-accent-dark: #fefce8;
            --color-text-primary: #1f2937;
            --color-text-secondary: #4b5563;
            --color-text-accent: #B8860B;
            --color-text-accent-muted: #b45309;
            --color-border: #e5e7eb;
            --color-input-bg: #ffffff;
        }

        /* --- TEMA 2: MEDIUM DARK --- */
        [data-theme="medium-dark"] {
            --color-gold-light: #FFD700;
            --color-gold-dark: #e0aa1f;
            --color-gold-accent: #DAA520;
            --color-bg-primary: #1f2937;
            --color-bg-secondary: #374151;
            --color-bg-muted: #4b5563;     
            --color-bg-accent-light: #422c01;
            --color-bg-accent-dark: #423001;
            --color-text-primary: #f9fafb;
            --color-text-secondary: #d1d5db;
            --color-text-accent: #e0aa1f;
            --color-text-accent-muted: #fde047;
            --color-border: #4b5563;
            --color-input-bg: #374151;
        }

        /* --- TEMA 3: DEEP DARK --- */
        [data-theme="deep-dark"] {
            --color-gold-light: #FFD700;
            --color-gold-dark: #e0aa1f;
            --color-gold-accent: #DAA520;
            --color-bg-primary: #0a0e14;
            --color-bg-secondary: #1f2937;
            --color-bg-muted: #374151;
            --color-bg-accent-light: #422c01;
            --color-bg-accent-dark: #423001;
            --color-text-primary: #f9fafb;
            --color-text-secondary: #d1d5db;
            --color-text-accent: #e0aa1f;
            --color-text-accent-muted: #fde047;
            --color-border: #4b5563;
            --color-input-bg: #1f2937;
        }

        /* ================================================= */
        /* === 2. ESTILOS BASE (Mapeamento) === */
        /* ================================================= */
        
        body { 
            height: 100%; 
            overflow-y: auto; /* Permite rolagem se o form for alto */
            display: flex; 
            align-items: center;
            justify-content: center;
            background-color: var(--color-bg-primary); 
            color: var(--color-text-primary);
        } 
        
        /* Mapeamento */
        .bg-white { background-color: var(--color-bg-secondary); }
        .bg-gray-100 { background-color: var(--color-bg-primary); }
        .bg-gold { background-color: var(--color-gold-accent); }
        
        .border-gray-200, .border-gray-300 { border-color: var(--color-border); }
        
        .text-gray-700 { color: var(--color-text-secondary); }
        .text-gray-600, .text-gray-500, .text-gray-400 { color: var(--color-text-secondary); }
        .text-gold { color: var(--color-text-accent); }
        
        /* Inputs */
        .form-input { 
            background-color: var(--color-input-bg);
            color: var(--color-text-primary);
            border-color: var(--color-border);
            transition: all 0.2s ease;
        }
        .form-input:focus {
            border-color: var(--color-gold-accent);
            outline: none;
            box-shadow: 0 0 0 2px rgba(218, 165, 32, 0.2); /* Gold shadow */
        }
        
        /* Animação */
        .animate-fade-in { animation: fadeIn 0.5s ease-in; }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .ring-gold-dark { --tw-ring-color: var(--color-gold-dark); }
        
        /* Link hover */
        a.text-gold:hover { color: var(--color-gold-light); }

    </style>
</head>
<body class="p-4">

    <div class="relative z-10 w-full max-w-md">
        <div class="absolute top-0 right-0 -mt-12 md:-mt-0 md:relative md:mb-4 flex justify-end">
             <button id="theme-toggle-btn" class="p-2 rounded-full bg-white dark:bg-gray-800 shadow-md text-gray-600 hover:text-gold transition-colors border border-gray-200 dark:border-gray-700">
                <i id="theme-icon-sun" class="fas fa-sun"></i> 
                <i id="theme-icon-moon" class="fas fa-moon hidden"></i> 
            </button>
        </div>

        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden animate-fade-in border border-gray-200">
            
            <div class="bg-gold p-8 text-center">
                 <h1 class="text-3xl font-bold text-white mb-2">
                    Crie sua Conta
                </h1>
                <p class="text-yellow-50 text-lg font-medium">
                    Agende seus horários no <%= (typeof orgName !== 'undefined') ? orgName : 'AgendaPro' %>
                </p>
            </div>

            <div class="p-8">
                
                <% if (typeof error !== 'undefined' && error) { %>
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl">
                    <p class="text-sm text-red-800 font-medium flex items-center">
                        <i class="fas fa-exclamation-triangle mr-2"></i><%= error %>
                    </p>
                </div>
                <% } %>

                <form action="/portal/<%= orgId %>/registro" method="POST" class="space-y-5" id="registerForm">
                    
                    <div class="input-group">
                        <label for="name" class="block text-sm font-semibold text-gray-700 mb-1">
                            <i class="fas fa-user mr-2 text-gold"></i> Nome Completo
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-user input-icon text-gray-400"></i>
                            </div>
                            <input id="name" name="name" type="text" required
                                   placeholder="Digite seu nome"
                                   class="form-input w-full pl-10 pr-4 py-3 border rounded-xl"
                                   autofocus>
                        </div>
                    </div>
                    
                    <div class="input-group">
                        <label for="email" class="block text-sm font-semibold text-gray-700 mb-1">
                            <i class="fas fa-envelope mr-2 text-gold"></i> E-mail
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope input-icon text-gray-400"></i>
                            </div>
                            <input id="email" name="email" type="email" required
                                   autocomplete="email"
                                   placeholder="seu.email@exemplo.com"
                                   class="form-input w-full pl-10 pr-4 py-3 border rounded-xl">
                        </div>
                    </div>

                    <div class="input-group">
                        <label for="phone" class="block text-sm font-semibold text-gray-700 mb-1">
                            <i class="fab fa-whatsapp mr-2 text-gold"></i> WhatsApp (Opcional)
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fab fa-whatsapp input-icon text-gray-400"></i>
                            </div>
                            <input id="phone" name="phone" type="tel"
                                   placeholder="(XX) XXXXX-XXXX"
                                   class="form-input w-full pl-10 pr-4 py-3 border rounded-xl">
                        </div>
                    </div>

                    <div class="input-group">
                        <label for="password" class="block text-sm font-semibold text-gray-700 mb-1">
                            <i class="fas fa-lock mr-2 text-gold"></i> Senha
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock input-icon text-gray-400"></i>
                            </div>
                            <input id="password" name="password" type="password" required
                                   autocomplete="new-password"
                                   placeholder="Crie uma senha (mín. 6 caracteres)"
                                   class="form-input w-full pl-10 pr-4 py-3 border rounded-xl">
                        </div>
                    </div>

                    <div class="input-group">
                        <label for="passwordConfirm" class="block text-sm font-semibold text-gray-700 mb-1">
                            <i class="fas fa-check-circle mr-2 text-gold"></i> Confirme a Senha
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock input-icon text-gray-400"></i>
                            </div>
                            <input id="passwordConfirm" name="passwordConfirm" type="password" required
                                   autocomplete="new-password"
                                   placeholder="Digite a senha novamente"
                                   class="form-input w-full pl-10 pr-4 py-3 border rounded-xl">
                        </div>
                    </div>

                    <div class="pt-4">
                        <button type="submit"
                                class="w-full bg-gold text-white py-4 px-6 rounded-xl font-bold text-lg hover:opacity-90 transition-all shadow-lg flex items-center justify-center">
                            <i class="fas fa-user-plus mr-3"></i>
                            <span>Criar Conta</span>
                        </button>
                    </div>
                </form>

                <div class="mt-6 text-center text-sm text-gray-500">
                    <p>
                        Já tem uma conta?
                        <a href="/portal/<%= orgId %>/login" class="font-bold text-gold hover:underline transition-colors">
                            Entrar agora
                        </a>
                    </p>
                </div>
                
            </div>
        </div> 

        <div class="mt-8 text-center text-sm text-gray-600">
             <p class="flex items-center justify-center">
                <i class="fas fa-crown mr-2 text-gold"></i>
                AgendaPro © <%= new Date().getFullYear() %>
            </p>
        </div>
    </div>
    
    <script>
        // =================================================
        // === LÓGICA DE TEMA ===
        // =================================================
        const THEMES = ["light", "medium-dark", "deep-dark"];
        const htmlEl = document.documentElement;

        function getNextTheme(currentTheme) {
            const currentIndex = THEMES.indexOf(currentTheme);
            const nextIndex = (currentIndex + 1) % THEMES.length;
            return THEMES[nextIndex];
        }

        function updateIcons(theme) {
            const sun = document.getElementById('theme-icon-sun');
            const moon = document.getElementById('theme-icon-moon');
            
            if (!sun || !moon) return;

            const isLight = theme === 'light';
            if (isLight) {
                sun.classList.remove('hidden');
                moon.classList.add('hidden');
            } else {
                sun.classList.add('hidden');
                moon.classList.remove('hidden');
            }
        }

        function toggleTheme() {
            const currentTheme = htmlEl.getAttribute('data-theme') || 'light';
            const newTheme = getNextTheme(currentTheme);

            htmlEl.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateIcons(newTheme);
        }

        document.addEventListener('DOMContentLoaded', function() {
            const initialTheme = htmlEl.getAttribute('data-theme') || 'light';
            updateIcons(initialTheme);
            
            const toggleButton = document.getElementById('theme-toggle-btn');
            if (toggleButton) toggleButton.addEventListener('click', toggleTheme);

            // Auto focus
            const nameInput = document.getElementById('name');
            if(nameInput) nameInput.focus();
        });
    </script>
</body>
</html>