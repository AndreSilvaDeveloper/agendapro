<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Login – AgendaPro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --color-gold-light: #FFD700;
            --color-gold-dark: #B8860B;
            --color-gold-accent: #DAA520;
        }
        
        body {
            background-image: url('/images/background-login.png'); 
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            overflow: hidden; 
        }

        .text-gold { color: var(--color-gold-dark); }
        .bg-gold { background-color: var(--color-gold-accent); }
        .bg-gold-light { background-color: #FFFBEB; }
        .border-gold { border-color: var(--color-gold-light); }
        .hover\:text-gold:hover { color: var(--color-gold-dark); }
        .hover\:bg-gold-light:hover { background-color: #FFF8DC; }
        .animate-fade-in { animation: fadeIn 0.5s ease-in; }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .text-gradient-gold {
            background: linear-gradient(90deg, #B8860B, #FFD700, #DAA520, #FFD700, #B8860B);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
            background-size: 200% auto;
            animation: text-shine 4s linear infinite;
        }
        @keyframes text-shine {
            from { background-position: 200% center; }
            to { background-position: 0% center; }
        }
        .bg-shine-gold { position: relative; overflow: hidden; }
        .bg-shine-gold::after {
            content: ''; position: absolute; top: -10%; left: -75%;
            width: 50%; height: 120%;
            background: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.4) 50%, rgba(255, 255, 255, 0) 100%);
            transform: skewX(-25deg);
            animation: bg-shine 5s infinite linear;
        }
        @keyframes bg-shine { 0% { left: -75%; } 100% { left: 125%; } }
        .form-input { transition: all 0.3s ease; }
        .login-button { transition: all 0.3s ease; }
        .login-button:active { transform: scale(0.98); }
        .error-shake { animation: shake 0.5s ease-in-out; }
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }
        .input-icon { transition: all 0.3s ease; }
        .input-group:focus-within .input-icon { color: var(--color-gold-dark); transform: scale(1.1); }
        .form-input-transparent::placeholder { color: #d1d5db; }
        .form-input-transparent:focus { border-color: transparent; background-color: rgba(255, 255, 255, 0.2); }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4 overflow-y-auto"> 
    
    <div class="relative z-10 w-full max-w-md">
        
        <div class="bg-black/30 backdrop-blur-lg rounded-3xl shadow-2xl overflow-hidden animate-fade-in"> 
            
            <div class="bg-gold p-6 text-center relative bg-shine-gold"> 
                <div class="absolute inset-0 bg-black bg-opacity-10"></div>
                <div class="relative z-10">
                    <div class="flex justify-center mb-4">
                         <img src="/images/logo-agendapro.jpg"
                             alt="Logo da Plataforma"
                             class="h-24 w-auto object-contain filter drop-shadow-lg"
                             onerror="this.style.display='none';">
                    </div>
                    <h1 class="text-3xl font-bold text-white mb-2">
                        Acesso ao Sistema
                    </h1>
                    <p class="text-yellow-100 text-lg"> AgendaPro </p>
                </div>
            </div>

            <div class="p-6">
                
                <% if (error) { %>
                <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-xl error-shake">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-triangle text-red-500"></i> </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-800 font-medium">
                                <%= error %>
                            </p>
                        </div>
                    </div>
                </div>
                <% } %>
                
                <% if (success) { %>
                <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-xl">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-check-circle text-green-500"></i> </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-800 font-medium">
                                <%= success %>
                            </p>
                        </div>
                    </div>
                </div>
                <% } %>

                <form action="/login" method="POST" class="space-y-4" id="loginForm">
                    
                    <div class="input-group">
                        <label for="email" class="block text-sm font-semibold text-gray-100 mb-2">
                            <i class="fas fa-envelope mr-2 text-gold"></i> E-mail
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope input-icon text-gray-400"></i>
                            </div>
                            <input id="email"
                                   name="email"
                                   type="email"
                                   required
                                   autocomplete="email"
                                   placeholder="Digite seu e-mail"
                                   class="form-input form-input-transparent w-full pl-10 pr-4 py-3 border border-gray-500 rounded-xl focus:ring-2 focus:ring-gold-dark focus:border-transparent transition-all bg-white/10 text-white placeholder-gray-300"> 
                        </div>
                    </div>

                    <div class="input-group">
                         <label for="password" class="block text-sm font-semibold text-gray-100 mb-2">
                            <i class="fas fa-lock mr-2 text-gold"></i> Senha
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock input-icon text-gray-400"></i>
                            </div>
                            <input id="password"
                                   name="password"
                                   type="password"
                                   required
                                   autocomplete="current-password"
                                   placeholder="Digite sua senha"
                                   class="form-input form-input-transparent w-full pl-10 pr-12 py-3 border border-gray-500 rounded-xl focus:ring-2 focus:ring-gold-dark focus:border-transparent transition-all bg-white/10 text-white placeholder-gray-300"> 
                            <button type="button"
                                    id="togglePassword"
                                    class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                <i class="fas fa-eye text-gray-400 hover:text-gold-dark transition-colors" id="eyeIcon"></i> 
                            </button>
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                                class="login-button w-full bg-gold text-white py-4 px-6 rounded-xl font-bold text-lg hover:opacity-90 transition-all flex items-center justify-center bg-shine-gold"
                                id="loginButton">
                            <i class="fas fa-sign-in-alt mr-3"></i>
                            <span id="buttonText">Entrar no Sistema</span>
                            <i class="fas fa-spinner fa-spin ml-3 hidden" id="loadingIcon"></i>
                        </button>
                    </div>
                </form>

                <div class="mt-4 text-center text-sm">
                  <a href="/forgot-password" class="font-medium text-gold hover:underline">
                    Esqueceu sua senha?
                  </a>
                </div>

                <div class="mt-6 text-center text-sm text-gray-200">
                    <p>
                        Não tem uma conta? 
                        <a href="/register" class="font-medium text-gold hover:underline">
                            Cadastre-se
                        </a>
                    </p>
                </div>

            </div>
        </div> 
        
        <div class="mt-6 text-center text-sm text-white">
             <p class="flex items-center justify-center">
                <i class="fas fa-crown mr-2 text-gold"></i>
                AgendaPro © <%= new Date().getFullYear() %>
            </p>
        </div>

    </div> 
    
    <script>
        // O JavaScript continua o mesmo
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('loginForm');
            const button = document.getElementById('loginButton');
            const buttonText = document.getElementById('buttonText');
            const loadingIcon = document.getElementById('loadingIcon');
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.getElementById('eyeIcon');
            
            const emailInput = document.getElementById('email'); 

            if (togglePassword && passwordInput && eyeIcon) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);

                    if (type === 'password') {
                        eyeIcon.classList.remove('fa-eye-slash');
                        eyeIcon.classList.add('fa-eye');
                    } else {
                        eyeIcon.classList.remove('fa-eye');
                        eyeIcon.classList.add('fa-eye-slash');
                    }
                });
            }

            if (form && button && buttonText && loadingIcon) {
                form.addEventListener('submit', function() {
                    buttonText.textContent = 'Entrando...';
                    loadingIcon.classList.remove('hidden');
                    button.classList.add('opacity-75', 'cursor-not-allowed');
                });
            }

            const errorDiv = document.querySelector('.error-shake');
            if (emailInput && !errorDiv) {
                emailInput.focus(); 
            }

            if (errorDiv) {
                setTimeout(() => {
                    errorDiv.classList.remove('error-shake');
                }, 500);
            }
        });
    </script>
</body>
</html>